<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Connexion | ADSIAM' %></title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            --primary-pink: #e7a6b7;
            --primary-blue: #a5bfd4;
            --light-pink: #fce8ec;
            --light-blue: #e8f3f8;
            --soft-gray: #f5f5f7;
            --text-dark: #2f2f2f;
            --text-light: #6f6f6f;
            --white: #ffffff;
            --success: #28a745;
            --error: #dc3545;
            --gradient-contact: linear-gradient(135deg, #e7a6b7, #a5bfd4);
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
            background: linear-gradient(135deg, var(--light-pink), var(--light-blue));
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 1rem;
            position: relative;
            overflow: hidden;
        }

        body::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -30%;
            width: 80%;
            height: 200%;
            background: var(--gradient-contact);
            border-radius: 50%;
            opacity: 0.1;
            transform: rotate(-15deg);
            z-index: -1;
        }

        .login-container {
            background: var(--white);
            border-radius: 25px;
            padding: 2.5rem;
            width: 100%;
            max-width: 400px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.1);
            position: relative;
            z-index: 10;
        }

        .logo {
            text-align: center;
            margin-bottom: 2rem;
        }

        .logo-icon {
            width: 60px;
            height: 60px;
            background: var(--gradient-contact);
            border-radius: 50%;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 700;
            font-size: 1.5rem;
            margin-bottom: 1rem;
        }

        .logo-text {
            font-size: 1.8rem;
            font-weight: 300;
            letter-spacing: 0.1em;
            color: var(--text-dark);
        }

        .forma { color: var(--primary-pink); }
        .pro { color: var(--primary-blue); font-weight: 600; }

        .welcome-text {
            text-align: center;
            margin-bottom: 2rem;
        }

        .welcome-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: var(--text-dark);
            margin-bottom: 0.5rem;
        }

        .welcome-subtitle {
            color: var(--text-light);
            font-size: 0.95rem;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 500;
            color: var(--text-dark);
            font-size: 0.9rem;
        }

        .form-input {
            width: 100%;
            padding: 1rem;
            border: 2px solid var(--soft-gray);
            border-radius: 12px;
            font-size: 1rem;
            transition: all 0.3s;
            background: var(--soft-gray);
        }

        .form-input:focus {
            outline: none;
            border-color: var(--primary-blue);
            background: var(--white);
            box-shadow: 0 5px 15px rgba(165, 191, 212, 0.2);
        }

        .btn-login {
            width: 100%;
            padding: 1.2rem;
            background: var(--gradient-contact);
            color: white;
            border: none;
            border-radius: 12px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            margin-bottom: 1.5rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        .btn-login:hover:not(:disabled) {
            transform: translateY(-2px);
            box-shadow: 0 15px 30px rgba(231, 166, 183, 0.4);
        }

        .btn-login:disabled {
            opacity: 0.7;
            cursor: not-allowed;
            transform: none;
        }

        .alert {
            padding: 1rem;
            border-radius: 8px;
            margin-bottom: 1.5rem;
            font-size: 0.9rem;
            text-align: center;
            display: none;
        }

        .alert.show {
            display: block;
            animation: slideDown 0.3s ease;
        }

        .alert-error {
            background: #f8d7da;
            color: var(--error);
            border: 1px solid #f5c6cb;
        }

        .alert-success {
            background: #d4edda;
            color: var(--success);
            border: 1px solid #c3e6cb;
        }

        .demo-info {
            background: var(--light-blue);
            padding: 1rem;
            border-radius: 8px;
            margin-bottom: 1.5rem;
            text-align: center;
            border: 1px solid var(--primary-blue);
        }

        .demo-title {
            font-weight: 600;
            color: var(--primary-blue);
            margin-bottom: 0.5rem;
            font-size: 0.9rem;
        }

        .demo-credentials {
            font-size: 0.85rem;
            color: var(--text-dark);
            line-height: 1.4;
        }

        .footer-links {
            text-align: center;
            margin-top: 1.5rem;
        }

        .footer-links a {
            color: var(--text-light);
            text-decoration: none;
            font-size: 0.9rem;
            margin: 0 1rem;
            transition: color 0.3s;
        }

        .footer-links a:hover {
            color: var(--primary-blue);
        }

        @keyframes slideDown {
            from { opacity: 0; transform: translateY(-20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        @media (max-width: 480px) {
            .login-container {
                padding: 2rem;
                margin: 0.5rem;
            }
            
            .logo-text {
                font-size: 1.5rem;
            }
            
            .welcome-title {
                font-size: 1.3rem;
            }
        }
    </style>
</head>
<body>
    <div class="login-container">
        <!-- Logo -->
        <div class="logo">
            <div class="logo-icon">A+</div>
            <div class="logo-text">
                <span class="forma">ADS</span><span class="pro">IAM</span>
            </div>
        </div>

        <!-- Texte de bienvenue -->
        <div class="welcome-text">
            <h1 class="welcome-title">Connexion</h1>
            <p class="welcome-subtitle">Acc√©dez √† votre espace de formation</p>
        </div>

        <!-- Messages d'alerte -->
        <div id="alertMessage" class="alert">
            <span id="alertText"></span>
        </div>

        <!-- Informations de d√©monstration -->
        <div class="demo-info">
            <div class="demo-title">üîë Identifiants de test</div>
            <div class="demo-credentials">
                <strong>Email:</strong> test@adsiam.fr<br>
                <strong>Mot de passe:</strong> password123
            </div>
        </div>

        <!-- Formulaire de connexion -->
        <form id="loginForm">
            <div class="form-group">
                <label for="email" class="form-label">Email</label>
                <input 
                    type="email" 
                    id="email" 
                    name="email" 
                    class="form-input"
                    value="test@adsiam.fr"
                    required
                    placeholder="votre@email.com"
                >
            </div>

            <div class="form-group">
                <label for="mot_de_passe" class="form-label">Mot de passe</label>
                <input 
                    type="password" 
                    id="mot_de_passe" 
                    name="mot_de_passe" 
                    class="form-input"
                    value="password123"
                    required
                    placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢"
                >
            </div>

            <button type="submit" id="loginBtn" class="btn-login">
                üöÄ Se connecter
            </button>
        </form>

        <!-- Liens footer -->
        <div class="footer-links">
            <a href="/">üè† Accueil</a>
            <a href="/formations">üìö Formations</a>
            <a href="/contact">üí¨ Contact</a>
        </div>
    </div>

    <script>
        // Variables globales
        const loginForm = document.getElementById('loginForm');
        const loginBtn = document.getElementById('loginBtn');
        const alertDiv = document.getElementById('alertMessage');
        const alertText = document.getElementById('alertText');

        // Fonction pour afficher les messages
        function showAlert(message, type = 'error') {
            alertDiv.className = `alert alert-${type} show`;
            alertText.textContent = message;
            
            // Masquer automatiquement apr√®s 5 secondes
            setTimeout(() => {
                alertDiv.classList.remove('show');
            }, 5000);
        }

        // Gestion du formulaire de connexion
        loginForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            
            // D√©sactiver le bouton
            loginBtn.disabled = true;
            loginBtn.innerHTML = '‚è≥ Connexion...';
            
            try {
                const formData = new FormData(loginForm);
                const data = {
                    email: formData.get('email'),
                    mot_de_passe: formData.get('mot_de_passe')
                };
                
                const response = await fetch('/auth/api/connexion', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(data)
                });
                
                const result = await response.json();
                
                if (result.success) {
                    showAlert('Connexion r√©ussie ! Redirection...', 'success');
                    
                    // Redirection apr√®s 1 seconde
                    setTimeout(() => {
                        window.location.href = result.redirect || '/etudiant/dashboard';
                    }, 1000);
                } else {
                    showAlert(result.message || 'Erreur de connexion');
                }
                
            } catch (error) {
                console.error('Erreur de connexion:', error);
                showAlert('Erreur de r√©seau. Veuillez r√©essayer.');
            } finally {
                // R√©activer le bouton
                loginBtn.disabled = false;
                loginBtn.innerHTML = 'üöÄ Se connecter';
            }
        });

        // Auto-focus sur le champ email si vide
        window.addEventListener('load', () => {
            const emailField = document.getElementById('email');
            if (!emailField.value || emailField.value === 'test@adsiam.fr') {
                emailField.focus();
                emailField.select();
            }
            
            console.log('üîê ADSIAM - Page de connexion charg√©e');
            console.log('üìß Email de test: test@adsiam.fr');
            console.log('üîë Mot de passe: password123');
            
            // Afficher les messages d'erreur/succ√®s depuis l'URL
            const urlParams = new URLSearchParams(window.location.search);
            if (urlParams.get('error')) {
                showAlert(getErrorMessage(urlParams.get('error')));
            }
            if (urlParams.get('message')) {
                showAlert(getSuccessMessage(urlParams.get('message')), 'success');
            }
        });

        // Messages d'erreur personnalis√©s
        function getErrorMessage(error) {
            const messages = {
                'invalid_credentials': 'Email ou mot de passe incorrect',
                'account_locked': 'Compte temporairement verrouill√©',
                'email_not_verified': 'Veuillez v√©rifier votre email',
                'account_disabled': 'Compte d√©sactiv√©',
                'too_many_attempts': 'Trop de tentatives. R√©essayez plus tard.',
                'network_error': 'Erreur de r√©seau'
            };
            return messages[error] || 'Erreur de connexion';
        }

        // Messages de succ√®s personnalis√©s
        function getSuccessMessage(message) {
            const messages = {
                'logout_success': 'D√©connexion r√©ussie',
                'registration_success': 'Compte cr√©√© avec succ√®s',
                'password_reset': 'Mot de passe r√©initialis√©'
            };
            return messages[message] || message;
        }

        // Gestion de la validation en temps r√©el
        document.getElementById('email').addEventListener('blur', function() {
            if (this.value && !this.validity.valid) {
                showAlert('Format d\'email invalide');
            }
        });

        // Raccourci clavier Entr√©e
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Enter' && !loginBtn.disabled) {
                loginForm.dispatchEvent(new Event('submit'));
            }
        });
    </script>
</body>
</html>