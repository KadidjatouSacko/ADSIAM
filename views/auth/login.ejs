        }

        @media (max-width: 480px) {
            .auth-form-panel {
                padding: 1.5rem;
            }

            .form-title {
                font-size: 1.8rem;
            }

            .brand-title {
                font-size: 2rem;
            }
        }

        /* Tab Switching */
        .auth-tabs {
            display: flex;
            background: var(--soft-gray);
            border-radius: 15px;
            padding: 0.5rem;
            margin-bottom: 2rem;
        }

