    let selectedEmployees = 0;
    let selectedFormation = null;
    let formationPrice = 0;

    // Gestion de la s√©lection des employ√©s
    employeeCheckboxes.forEach(checkbox => {
        checkbox.addEventListener('change', updateEmployeeSelection);
    });

    // Gestion de la s√©lection de formation
    formationRadios.forEach(radio => {
        radio.addEventListener('change', updateFormationSelection);
    });

    function updateEmployeeSelection() {
        selectedEmployees = document.querySelectorAll('.employee-checkbox:checked').length;
        document.getElementById('selectedCount').textContent = selectedEmployees;
        document.getElementById('summaryEmployees').textContent = selectedEmployees;
        updateSummaryDisplay();
        validateForm();
    }

    function updateFormationSelection() {
        const checkedFormation = document.querySelector('.formation-radio:checked');
        if (checkedFormation) {
            selectedFormation = checkedFormation.closest('.formation-label').querySelector('.formation-title').textContent.trim();
            formationPrice = parseFloat(checkedFormation.dataset.prix) || 0;
            
            document.getElementById('summaryFormation').textContent = selectedFormation;
            updateCostDisplay();
        }
        updateSummaryDisplay();
        validateForm();
    }

    function updateCostDisplay() {
        const totalCost = selectedEmployees * formationPrice;
        const costText = totalCost === 0 ? 'Gratuit' : totalCost + '‚Ç¨';
        document.getElementById('summaryCost').textContent = costText;
    }

    function updateSummaryDisplay() {
        if (selectedEmployees > 0 || selectedFormation) {
            summary.style.display = 'block';
            updateCostDisplay();
        } else {
            summary.style.display = 'none';
        }
    }

    function validateForm() {
        const isValid = selectedEmployees > 0 && selectedFormation;
        submitBtn.disabled = !isValid;
    }

    // Boutons de s√©lection globale
    window.selectAllEmployees = function() {
        employeeCheckboxes.forEach(checkbox => {
            checkbox.checked = true;
        });
        updateEmployeeSelection();
    };

    window.deselectAllEmployees = function() {
        employeeCheckboxes.forEach(checkbox => {
            checkbox.checked = false;
        });
        updateEmployeeSelection();
    };

    // Gestion du formulaire
    document.getElementById('inscriptionForm').addEventListener('submit', function(e) {
        if (selectedEmployees === 0) {
            e.preventDefault();
            alert('Veuillez s√©lectionner au moins un employ√©.');
            return;
        }
        
        if (!selectedFormation) {
            e.preventDefault();
            alert('Veuillez s√©lectionner une formation.');
            return;
        }
        
        // Confirmation avant soumission
        const message = `Confirmer l'inscription de ${selectedEmployees} employ√©(s) √† la formation "${selectedFormation}" ?`;
        if (!confirm(message)) {
            e.preventDefault();
        }
    });

    console.log('üìù Page nouvelle inscription initialis√©e');
    console.log(`üë• ${employeeCheckboxes.length} employ√©s disponibles`);
    console.log(`üìö ${formationRadios.length} formations disponibles`);
});
</script>