<!-- Header -->
<header class="dashboard-header">
    <div class="header-left">
        <% if (typeof showBreadcrumb !== 'undefined' && showBreadcrumb && typeof breadcrumb !== 'undefined') { %>
            <nav class="breadcrumb">
                <% breadcrumb.forEach((item, index) => { %>
                    <% if (index > 0) { %>
                        <span class="breadcrumb-separator">‚Ä∫</span>
                    <% } %>
                    <% if (item.url && index < breadcrumb.length - 1) { %>
                        <a href="<%= item.url %>" class="breadcrumb-link"><%= item.title %></a>
                    <% } else { %>
                        <span class="breadcrumb-current"><%= item.title %></span>
                    <% } %>
                <% }) %>
            </nav>
        <% } %>
        
        <h1 class="header-title">
            <% if (typeof pageIcon !== 'undefined') { %>
                <span class="header-icon"><%= pageIcon %></span>
            <% } %>
            <%= typeof pageTitle !== 'undefined' ? pageTitle : 'Dashboard' %>
        </h1>
        
        <% if (typeof pageSubtitle !== 'undefined') { %>
            <p class="header-subtitle"><%= pageSubtitle %></p>
        <% } else { %>
            <p class="header-subtitle">
                Bonjour <%= user && user.prenom ? user.prenom : 'Utilisateur' %>, 
                <% if (typeof customGreeting !== 'undefined') { %>
                    <%= customGreeting %>
                <% } else { %>
                    continuez votre apprentissage !
                <% } %>
            </p>
        <% } %>
    </div>
    
    <div class="header-actions">
        <% if (typeof showSearch !== 'undefined' && showSearch) { %>
            <div class="header-search">
                <input type="text" class="search-input" placeholder="<%= typeof searchPlaceholder !== 'undefined' ? searchPlaceholder : 'Rechercher...' %>" id="globalSearch">
                <span class="search-icon">üîç</span>
                <div class="search-results" id="searchResults" style="display: none;"></div>
            </div>
        <% } %>
        
        <% if (typeof showQuickActions !== 'undefined' && showQuickActions) { %>
            <div class="quick-actions-dropdown">
                <button class="quick-action-btn" title="Actions rapides" id="quickActionsBtn">
                    ‚ö°
                </button>
                <div class="quick-actions-menu" id="quickActionsMenu" style="display: none;">
                    <a href="/nouvelle-formation" class="quick-action-item">
                        <span class="action-icon">üìö</span>
                        <span class="action-text">Nouvelle formation</span>
                    </a>
                    <a href="/mes-messages/nouveau" class="quick-action-item">
                        <span class="action-icon">‚úâÔ∏è</span>
                        <span class="action-text">Nouveau message</span>
                    </a>
                    <a href="/support" class="quick-action-item">
                        <span class="action-icon">üÜò</span>
                        <span class="action-text">Aide</span>
                    </a>
                </div>
            </div>
        <% } %>
        
        <button class="notification-btn" title="Notifications" id="notificationBtn">
            üîî
            <% if (typeof notificationsNonLues !== 'undefined' && notificationsNonLues > 0) { %>
                <span class="notification-badge"><%= notificationsNonLues %></span>
            <% } %>
        </button>
        
        <div class="user-menu">
            <button class="user-menu-btn" id="userMenuBtn">
                <div class="user-avatar-small">
                    <% if (user && user.avatar) { %>
                        <img src="<%= user.avatar %>" alt="Avatar">
                    <% } else if (user && user.prenom) { %>
                        <%= user.prenom.charAt(0).toUpperCase() %>
                    <% } else { %>
                        üë§
                    <% } %>
                </div>
                <span class="user-name-small">
                    <%= user && user.prenom ? user.prenom : 'User' %>
                </span>
                <span class="dropdown-arrow">‚ñº</span>
            </button>
            
            <div class="user-menu-dropdown" id="userMenuDropdown" style="display: none;">
                <div class="user-info-header">
                    <div class="user-avatar-large">
                        <% if (user && user.avatar) { %>
                            <img src="<%= user.avatar %>" alt="Avatar">
                        <% } else if (user && user.prenom) { %>
                            <%= user.prenom.charAt(0).toUpperCase() %>
                        <% } else { %>
                            üë§
                        <% } %>
                    </div>
                    <div class="user-details">
                        <div class="user-name">
                            <%= user && user.prenom ? user.prenom : 'Utilisateur' %> 
                            <%= user && user.nom ? user.nom : '' %>
                        </div>
                        <div class="user-email"><%= user && user.email ? user.email : '' %></div>
                    </div>
                </div>
                
                <div class="menu-divider"></div>
                
                <a href="/mon-profil" class="menu-item">
                    <span class="menu-icon">üë§</span>
                    <span class="menu-text">Mon profil</span>
                </a>
                <a href="/mes-parametres" class="menu-item">
                    <span class="menu-icon">‚öôÔ∏è</span>
                    <span class="menu-text">Param√®tres</span>
                </a>
                <a href="/mes-notifications" class="menu-item">
                    <span class="menu-icon">üîî</span>
                    <span class="menu-text">Notifications</span>
                    <% if (typeof notificationsNonLues !== 'undefined' && notificationsNonLues > 0) { %>
                        <span class="menu-badge"><%= notificationsNonLues %></span>
                    <% } %>
                </a>
                
                <div class="menu-divider"></div>
                
                <a href="/support" class="menu-item">
                    <span class="menu-icon">üÜò</span>
                    <span class="menu-text">Support</span>
                </a>
                <a href="/feedback" class="menu-item">
                    <span class="menu-icon">üí≠</span>
                    <span class="menu-text">Feedback</span>
                </a>
                
                <div class="menu-divider"></div>
                
                <a href="/auth/logout" class="menu-item logout" onclick="return confirm('√ätes-vous s√ªr de vouloir vous d√©connecter ?')">
                    <span class="menu-icon">üö™</span>
                    <span class="menu-text">D√©connexion</span>
                </a>
            </div>
        </div>
    </div>
</header>

<style>
