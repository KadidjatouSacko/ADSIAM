    margin-bottom: 0.25rem;
    display: flex;
    align-items: center;
    gap: 0.75rem;
}

.header-icon {
    font-size: 1.8rem;
}

.header-subtitle {
    color: var(--text-light);
    font-size: 1rem;
    margin: 0;
}

