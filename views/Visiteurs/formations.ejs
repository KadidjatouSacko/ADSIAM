                    show = ['pathologies', 'ergonomie'].includes(card.dataset.domain);
                } else if (filterType.includes('certifiantes')) {
                    // Logique pour les certifiantes
                    show = ['urgences', 'pathologies', 'hygiene'].includes(card.dataset.domain);
                }

                if (show) {
                    card.style.display = 'block';
                    card.style.animation = 'fadeInUp 0.5s ease forwards';
