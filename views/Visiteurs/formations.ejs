            });

            updateResultsCount();
        }

        // Recherche textuelle
        searchInput.addEventListener('input', (e) => {
            const searchTerm = e.target.value.toLowerCase();
            
            formationCards.forEach(card => {
                const title = card.querySelector('.formation-title').textContent.toLowerCase();
                const description = card.querySelector('.formation-description').textContent.toLowerCase();
                
                if (title.includes(searchTerm) || description.includes(searchTerm) || searchTerm === '') {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });

            updateResultsCount();
        });

        // Filtres select
        [levelFilter, durationFilter, priceFilter, domainFilter].forEach(select => {
            select.addEventListener('change', applyFilters);
        });

        function applyFilters() {
            const levelValue = levelFilter.value;
            const durationValue = durationFilter.value;
            const priceValue = priceFilter.value;
            const domainValue = domainFilter.value;

            formationCards.forEach(card => {
                let show = true;

                if (levelValue && card.dataset.level !== levelValue) show = false;
                if (durationValue && card.dataset.duration !== durationValue) show = false;
                if (priceValue && card.dataset.price !== priceValue) show = false;
                if (domainValue && card.dataset.domain !== domainValue) show = false;

                card.style.display = show ? 'block' : 'none';
            });

            updateResultsCount();
        }

        // Mettre √† jour le compteur de r√©sultats
        function updateResultsCount() {
            const visibleCards = Array.from(formationCards).filter(card => 
                card.style.display !== 'none'
            );
            document.querySelector('.results-count').textContent = 
                `${visibleCards.length} formation${visibleCards.length > 1 ? 's' : ''} trouv√©e${visibleCards.length > 1 ? 's' : ''}`;
        }

        // Boutons d'action des filtres
        document.querySelector('.btn-primary').addEventListener('click', applyFilters);
        
        document.querySelector('.btn-secondary').addEventListener('click', () => {
            // R√©initialiser tous les filtres
            levelFilter.value = '';
            durationFilter.value = '';
            priceFilter.value = '';
            domainFilter.value = '';
            searchInput.value = '';
            
            filterButtons.forEach(btn => btn.classList.remove('active'));
            filterButtons[0].classList.add('active');
            
            formationCards.forEach(card => {
                card.style.display = 'block';
            });
            
            updateResultsCount();
        });

        // Gestion des cartes de formation
        formationCards.forEach(card => {
            card.addEventListener('click', (e) => {
                if (!e.target.classList.contains('formation-btn')) {
                    const title = card.querySelector('.formation-title').textContent;
                    window.location.href = `formation-detail.html?course=${encodeURIComponent(title)}`;
                }
            });
        });

        // Boutons d'inscription
        document.querySelectorAll('.formation-btn').forEach(button => {
            button.addEventListener('click', (e) => {
                e.stopPropagation();
                const card = e.target.closest('.formation-card');
                const title = card.querySelector('.formation-title').textContent;
                const price = card.querySelector('.price-current').textContent;
                
                if (price === 'Gratuit') {
                    alert(`üéâ Acc√®s imm√©diat √† la formation :\n"${title}"\n\n‚úÖ Formation gratuite\nüöÄ Commencez maintenant !`);
                } else {
                    alert(`üí≥ Formation : ${title}\nüí∞ Prix : ${price}\n\nüõí Redirection vers le panier...`);
                }
            });
        });

        // Gestion de la vue (grille/liste)
        document.querySelectorAll('.view-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                document.querySelectorAll('.view-btn').forEach(b => b.classList.remove('active'));
                btn.classList.add('active');
                
                // Ici vous pourriez impl√©menter la vue liste vs grille
                if (btn.textContent === '‚ò∞') {
                    alert('Vue liste - √Ä impl√©menter');
                }
            });
        });

        // Chat widget
        document.querySelector('.chat-button').addEventListener('click', () => {
            alert('üí¨ Aide personnalis√©e\n\nüéØ Besoin d\'aide pour choisir votre formation ?\n\nüë®‚Äçüéì Nos conseillers p√©dagogiques vous accompagnent :\n\n‚úÖ Analyse de vos besoins\n‚úÖ Recommandations personnalis√©es\n‚úÖ Information sur les financements\n‚úÖ Support technique\n\nContactez-nous maintenant !');
        });

        // Pagination
        document.querySelectorAll('.pagination button').forEach(btn => {
            btn.addEventListener('click', (e) => {
                if (!btn.disabled) {
                    document.querySelectorAll('.pagination button').forEach(b => b.classList.remove('active'));
                    if (!isNaN(btn.textContent)) {
                        btn.classList.add('active');
                        window.scrollTo({ top: 0, behavior: 'smooth' });
                    }
                }
            });
        });

        // Tri des formations
        document.querySelector('.sort-select').addEventListener('change', (e) => {
            const sortType = e.target.value;
            const grid = document.getElementById('formationsGrid');
            const cards = Array.from(grid.children);
            
            cards.sort((a, b) => {
                if (sortType === 'Prix croissant') {
                    const priceA = a.querySelector('.price-current').textContent;
                    const priceB = b.querySelector('.price-current').textContent;
                    return parsePrice(priceA) - parsePrice(priceB);
                } else if (sortType === 'Prix d√©croissant') {
                    const priceA = a.querySelector('.price-current').textContent;
                    const priceB = b.querySelector('.price-current').textContent;
                    return parsePrice(priceB) - parsePrice(priceA);
                }
                return 0;
            });
            
            cards.forEach(card => grid.appendChild(card));
        });

        function parsePrice(priceText) {
            if (priceText === 'Gratuit') return 0;
            return parseInt(priceText.replace('‚Ç¨', '')) || 0;
        }

        // Smooth scroll pour les liens
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth', block: 'start' });
                }
            });
        });

        console.log('üìö Catalogue ADSIAM charg√© - 9 formations affich√©es sur 36 disponibles');
    </script>
