                        break;
                    case 'Que faire si j\'ai des probl√®mes techniques ?':
                        answer = 'üîß Support technique :\n\nüí¨ Chat en direct 24h/7j\nüìû Hotline technique\nüìß Email support\nüé• Tutoriels vid√©o\n\n‚ö° R√©solution rapide garantie !';
                        break;
                    case 'Les formations sont-elles reconnues ?':
                        answer = '‚úÖ Reconnaissance ADSIAM :\n\nüèõÔ∏è Organisme de formation certifi√©\nüë• Valid√©es par des experts\nüéØ Adapt√©es aux r√©alit√©s terrain\nüìú Certificats reconnus\n\nüåü Plus de 2500 professionnels form√©s !';
                        break;
                }
                
                alert(answer);
            });
        });

        // Emergency contact
        document.querySelector('.emergency-phone').addEventListener('click', (e) => {
            if (!confirm('üö® Support Urgent\n\nVous allez appeler notre ligne d\'urgence.\n\nConfirmez-vous que votre probl√®me n√©cessite une intervention imm√©diate ?')) {
