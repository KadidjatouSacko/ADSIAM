                <div class="contact-details">
                    <div class="contact-detail">
                        <span>📧</span>
                        <span>adsiam@gmail.com</span>
                    </div>
                    <div class="contact-detail">
                        <span>⏱️</span>
                        <span>Réponse < 2h</span>
                    </div>
                </div>
