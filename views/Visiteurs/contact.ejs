    <script>
        // Animation au scroll
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    if (entry.target.classList.contains('slide-in')) {
                        entry.target.style.animation = 'slideInLeft 0.8s ease forwards';
                    } else {
                        entry.target.style.animation = 'fadeInUp 0.8s ease forwards';
                    }
                }
            });
        }, observerOptions);

        document.querySelectorAll('.fade-in, .slide-in').forEach(el => {
            observer.observe(el);
        });

        // Contact cards interaction
        document.querySelectorAll('.contact-card').forEach(card => {
            card.addEventListener('click', () => {
                const title = card.querySelector('.contact-title').textContent;
                
                switch(title) {
                    case 'Chat en Direct':
                        alert('💬 Chat en Direct\n\n🟢 Connexion au chat...\n\nVous allez être connecté avec un conseiller ADSIAM dans quelques secondes !\n\n✨ Support disponible 24h/7j');
                        break;
                    case 'Support Téléphonique':
                        if (confirm('📞 Souhaitez-vous appeler le 06 50 84 81 75 ?')) {
                            window.location.href = 'tel:0650848175';
                        }
                        break;
                    case 'Email Support':
                        window.location.href = 'mailto:contact@formapro-plus.org?subject=Demande de support ADSIAM';
                        break;
                    case 'Visioconférence':
                        alert('🎥 Rendez-vous Visioconférence\n\n📅 Planification en cours...\n\nVous allez être redirigé vers notre calendrier de réservation pour choisir un créneau avec un conseiller expert.\n\n🎯 Accompagnement personnalisé garanti !');
                        break;
                }
            });
        });

        // File upload functionality
        const fileUpload = document.getElementById('fileUpload');
        const fileInput = document.getElementById('fileInput');
        const uploadedFiles = document.getElementById('uploadedFiles');
        let selectedFiles = [];

        // Drag and drop
        fileUpload.addEventListener('dragover', (e) => {
            e.preventDefault();
            fileUpload.classList.add('dragover');
        });

        fileUpload.addEventListener('dragleave', () => {
            fileUpload.classList.remove('dragover');
        });

        fileUpload.addEventListener('drop', (e) => {
            e.preventDefault();
            fileUpload.classList.remove('dragover');
            const files = Array.from(e.dataTransfer.files);
            handleFiles(files);
        });

        fileInput.addEventListener('change', (e) => {
            const files = Array.from(e.target.files);
            handleFiles(files);
        });

        function handleFiles(files) {
            files.forEach(file => {
                if (file.size > 10 * 1024 * 1024) { // 10MB limit
                    alert(`❌ Le fichier "${file.name}" est trop volumineux (max 10MB)`);
                    return;
                }
                
                if (!selectedFiles.find(f => f.name === file.name && f.size === file.size)) {
                    selectedFiles.push(file);
                    displayFile(file);
                }
            });
        }

        function displayFile(file) {
            const fileDiv = document.createElement('div');
            fileDiv.className = 'uploaded-file';
            fileDiv.innerHTML = `
                <div class="file-info">
                    <span class="file-icon">📎</span>
                    <div>
                        <div class="file-name">${file.name}</div>
                        <div class="file-size">${formatFileSize(file.size)}</div>
                    </div>
                </div>
                <span class="file-remove" onclick="removeFile('${file.name}', ${file.size})">✕</span>
            `;
            uploadedFiles.appendChild(fileDiv);
        }

        function removeFile(fileName, fileSize) {
            selectedFiles = selectedFiles.filter(f => !(f.name === fileName && f.size === fileSize));
            const fileElements = uploadedFiles.querySelectorAll('.uploaded-file');
            fileElements.forEach(el => {
                if (el.querySelector('.file-name').textContent === fileName) {
                    el.remove();
                }
            });
        }

        function formatFileSize(bytes) {
            if (bytes === 0) return '0 Bytes';
            const k = 1024;
            const sizes = ['Bytes', 'KB', 'MB'];
            const i = Math.floor(Math.log(bytes) / Math.log(k));
            return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
        }

        // Form submission
        const contactForm = document.getElementById('contactForm');
        const submitBtn = document.getElementById('submitBtn');
        const successMessage = document.getElementById('successMessage');

        contactForm.addEventListener('submit', (e) => {
            e.preventDefault();
            
            // Show loading state
            submitBtn.disabled = true;
            submitBtn.innerHTML = '⏳ Envoi en cours...';
            
            // Simulate form submission
            setTimeout(() => {
                // Show success message
                successMessage.classList.add('show');
                
                // Reset form
                contactForm.reset();
                selectedFiles = [];
                uploadedFiles.innerHTML = '';
                
                // Reset button
                submitBtn.disabled = false;
                submitBtn.innerHTML = '📤 Envoyer le message';
                
                // Hide success message after 5 seconds
                setTimeout(() => {
                    successMessage.classList.remove('show');
                }, 5000);
                
                // Scroll to top
                window.scrollTo({ top: 0, behavior: 'smooth' });
                
            }, 2000);
        });

        // Form validation
        const inputs = document.querySelectorAll('.form-input[required]');
        inputs.forEach(input => {
            input.addEventListener('blur', validateInput);
            input.addEventListener('input', clearError);
        });

        function validateInput(e) {
            const input = e.target;
            const value = input.value.trim();
            
            if (!value) {
                showInputError(input, 'Ce champ est obligatoire');
            } else if (input.type === 'email' && !isValidEmail(value)) {
                showInputError(input, 'Veuillez entrer un email valide');
            } else {
                clearInputError(input);
            }
        }

        function showInputError(input, message) {
            input.classList.add('error');
            let errorDiv = input.nextElementSibling;
            if (!errorDiv || !errorDiv.classList.contains('error-message')) {
                errorDiv = document.createElement('div');
                errorDiv.className = 'error-message';
                errorDiv.style.cssText = 'color: #dc3545; font-size: 0.85rem; margin-top: 0.5rem;';
                input.parentNode.appendChild(errorDiv);
            }
            errorDiv.textContent = message;
        }

        function clearInputError(input) {
            input.classList.remove('error');
            const errorDiv = input.nextElementSibling;
            if (errorDiv && errorDiv.classList.contains('error-message')) {
                errorDiv.remove();
            }
        }

        function clearError(e) {
            clearInputError(e.target);
        }

        function isValidEmail(email) {
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            return emailRegex.test(email);
        }

        // FAQ interactions
        document.querySelectorAll('.faq-item').forEach(item => {
            item.addEventListener('click', () => {
                const question = item.querySelector('.faq-question').textContent;
                let answer = '';
                
                switch(question) {
                    case 'Comment accéder à mes formations ?':
                        answer = '📚 Accès aux formations :\n\n1️⃣ Connectez-vous à votre compte\n2️⃣ Allez dans "Mes formations"\n3️⃣ Cliquez sur la formation souhaitée\n4️⃣ Suivez les modules dans l\'ordre\n\n✨ Accès illimité 24h/7j !';
                        break;
                    case 'Puis-je obtenir un certificat ?':
                        answer = '🏆 Certificats ADSIAM :\n\n✅ Certificat automatique après validation\n📄 Format PDF téléchargeable\n🎯 Reconnu par les professionnels\n📧 Envoi par email\n\n💡 Validez tous les quiz pour l\'obtenir !';
                        break;
                    case 'Comment financer ma formation ?':
                        answer = '💰 Options de financement :\n\n🏢 OPCO (prise en charge employeur)\n💳 Paiement en plusieurs fois\n🎁 Formations gratuites disponibles\n📞 Conseils personnalisés\n\nContactez-nous pour étudier votre situation !';
                        break;
                    case 'Que faire si j\'ai des problèmes techniques ?':
                        answer = '🔧 Support technique :\n\n💬 Chat en direct 24h/7j\n📞 Hotline technique\n📧 Email support\n🎥 Tutoriels vidéo\n\n⚡ Résolution rapide garantie !';
                        break;
                    case 'Les formations sont-elles reconnues ?':
                        answer = '✅ Reconnaissance ADSIAM :\n\n🏛️ Organisme de formation certifié\n👥 Validées par des experts\n🎯 Adaptées aux réalités terrain\n📜 Certificats reconnus\n\n🌟 Plus de 2500 professionnels formés !';
                        break;
                }
                
                alert(answer);
            });
        });

        // Emergency contact
        document.querySelector('.emergency-phone').addEventListener('click', (e) => {
            if (!confirm('🚨 Support Urgent\n\nVous allez appeler notre ligne d\'urgence.\n\nConfirmez-vous que votre problème nécessite une intervention immédiate ?')) {
                e.preventDefault();
            }
        });

        // Phone number formatting
        const phoneInput = document.getElementById('phone');
        phoneInput.addEventListener('input', (e) => {
            let value = e.target.value.replace(/\D/g, '');
            if (value.length > 0) {
                if (value.length <= 2) {
                    value = value;
                } else if (value.length <= 4) {
                    value = value.slice(0, 2) + ' ' + value.slice(2);
                } else if (value.length <= 6) {
                    value = value.slice(0, 2) + ' ' + value.slice(2, 4) + ' ' + value.slice(4);
                } else if (value.length <= 8) {
                    value = value.slice(0, 2) + ' ' + value.slice(2, 4) + ' ' + value.slice(4, 6) + ' ' + value.slice(6);
                } else {
                    value = value.slice(0, 2) + ' ' + value.slice(2, 4) + ' ' + value.slice(4, 6) + ' ' + value.slice(6, 8) + ' ' + value.slice(8, 10);
                }
            }
            e.target.value = value;
        });

        // Auto-resize textarea
        const messageTextarea = document.getElementById('message');
        messageTextarea.addEventListener('input', function() {
            this.style.height = 'auto';
            this.style.height = (this.scrollHeight) + 'px';
        });

        // Character counter for message
        messageTextarea.addEventListener('input', function() {
            const maxLength = 1000;
            const currentLength = this.value.length;
            
            let counter = this.parentNode.querySelector('.char-counter');
            if (!counter) {
                counter = document.createElement('div');
                counter.className = 'char-counter';
                counter.style.cssText = 'text-align: right; font-size: 0.85rem; color: var(--text-light); margin-top: 0.5rem;';
                this.parentNode.appendChild(counter);
            }
            
            counter.textContent = `${currentLength}/${maxLength} caractères`;
            
            if (currentLength > maxLength * 0.9) {
                counter.style.color = '#dc3545';
            } else if (currentLength > maxLength * 0.7) {
                counter.style.color = '#ffc107';
            } else {
                counter.style.color = 'var(--text-light)';
            }
            
            if (currentLength > maxLength) {
                this.value = this.value.substring(0, maxLength);
                counter.textContent = `${maxLength}/${maxLength} caractères (maximum atteint)`;
            }
        });

        // Subject-based message suggestions
        const subjectSelect = document.getElementById('subject');
        subjectSelect.addEventListener('change', function() {
            const suggestions = {
                'inscription': 'Bonjour,\n\nJ\'aimerais obtenir des informations concernant l\'inscription à vos formations...',
                'technique': 'Bonjour,\n\nJe rencontre un problème technique avec...',
                'contenu': 'Bonjour,\n\nJ\'ai une question concernant le contenu de la formation...',
                'certificat': 'Bonjour,\n\nJe souhaiterais obtenir mon certificat de formation pour...',
                'financement': 'Bonjour,\n\nJ\'aimerais connaître les options de financement disponibles...',
                'partenariat': 'Bonjour,\n\nJe représente [nom de l\'organisation] et souhaiterais explorer des opportunités de partenariat...',
                'autre': 'Bonjour,\n\nJe vous contacte concernant...'
            };
            
            if (suggestions[this.value] && !messageTextarea.value.trim()) {
                messageTextarea.value = suggestions[this.value];
                messageTextarea.dispatchEvent(new Event('input'));
            }
        });

        // Smooth scroll pour les liens
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth', block: 'start' });
                }
            });
        });

        // Copy email to clipboard
        document.querySelectorAll('[href^="mailto:"]').forEach(link => {
            link.addEventListener('click', (e) => {
                const email = link.href.replace('mailto:', '').split('?')[0];
                navigator.clipboard.writeText(email).then(() => {
                    // Show temporary notification
                    const notification = document.createElement('div');
                    notification.textContent = `📧 Email copié : ${email}`;
                    notification.style.cssText = `
                        position: fixed;
                        top: 2rem;
                        right: 2rem;
                        background: var(--success);
                        color: white;
                        padding: 1rem 2rem;
                        border-radius: 10px;
                        z-index: 10000;
                        animation: slideInRight 0.3s ease;
                    `;
                    document.body.appendChild(notification);
                    setTimeout(() => notification.remove(), 3000);
                });
            });
        });

        // Keyboard shortcuts
        document.addEventListener('keydown', (e) => {
            // Ctrl/Cmd + Enter to submit form
            if ((e.ctrlKey || e.metaKey) && e.key === 'Enter' && document.activeElement.closest('#contactForm')) {
                e.preventDefault();
                contactForm.dispatchEvent(new Event('submit'));
            }
            
            // Escape to clear form
            if (e.key === 'Escape' && document.activeElement.closest('#contactForm')) {
                if (confirm('🔄 Voulez-vous effacer le formulaire ?')) {
                    contactForm.reset();
                    selectedFiles = [];
                    uploadedFiles.innerHTML = '';
                }
            }
        });

        // Save form data to localStorage (draft)
        const formElements = contactForm.querySelectorAll('input, select, textarea');
        formElements.forEach(element => {
            element.addEventListener('input', saveFormDraft);
        });

        function saveFormDraft() {
            const formData = new FormData(contactForm);
            const draftData = {};
            for (let [key, value] of formData.entries()) {
                draftData[key] = value;
            }
            localStorage.setItem('contactFormDraft', JSON.stringify(draftData));
        }

        function loadFormDraft() {
            const draftData = localStorage.getItem('contactFormDraft');
            if (draftData) {
                const data = JSON.parse(draftData);
                Object.keys(data).forEach(key => {
                    const element = contactForm.querySelector(`[name="${key}"]`);
                    if (element && data[key]) {
                        element.value = data[key];
