    <!-- SCRIPT ADAPTÉ POUR FONCTIONNER AVEC LE BACKEND -->
    <script>
        // Conserver tout votre JavaScript existant pour les animations et interactions
        
        // Animation au scroll
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    if (entry.target.classList.contains('slide-in')) {
                        entry.target.style.animation = 'slideInLeft 0.8s ease forwards';
                    } else {
                        entry.target.style.animation = 'fadeInUp 0.8s ease forwards';
                    }
                }
            });
        }, observerOptions);

        document.querySelectorAll('.fade-in, .slide-in').forEach(el => {
            observer.observe(el);
        });

        // Contact cards interaction (garder tel quel)
        document.querySelectorAll('.contact-card').forEach(card => {
            card.addEventListener('click', () => {
                const title = card.querySelector('.contact-title').textContent;
                
                switch(title) {
                    case 'Chat en Direct':
                        alert('💬 Chat en Direct\n\n🟢 Connexion au chat...\n\nVous allez être connecté avec un conseiller ADSIAM dans quelques secondes !\n\n✨ Support disponible 24h/7j');
                        break;
                    case 'Support Téléphonique':
                        if (confirm('📞 Souhaitez-vous appeler le 06 50 84 81 75 ?')) {
                            window.location.href = 'tel:0650848175';
                        }
                        break;
                    case 'Email Support':
                        window.location.href = 'mailto:adsiam@gmail.com?subject=Demande de support ADSIAM';
                        break;
                    case 'Visioconférence':
                        alert('🎥 Rendez-vous Visioconférence\n\n📅 Planification en cours...\n\nVous allez être redirigé vers notre calendrier de réservation pour choisir un créneau avec un conseiller expert.\n\n🎯 Accompagnement personnalisé garanti !');
                        break;
                }
            });
        });

        // MODIFICATION : Formulaire soumis au backend au lieu de simulation
        const contactForm = document.getElementById('contactForm');
        const submitBtn = document.getElementById('submitBtn');
        const successMessageAjax = document.getElementById('successMessageAjax');

        // Garder votre logique de upload de fichiers existante
        // File upload functionality (conserver tel quel)
        const fileUpload = document.getElementById('fileUpload');
        const fileInput = document.getElementById('fileInput');
        const uploadedFiles = document.getElementById('uploadedFiles');
        let selectedFiles = [];

        // Toute votre logique de fichiers existante (drag & drop, etc.)
        // ... [garder tout le code file upload existant] ...

        // Soumission du formulaire - MODIFIÉE pour le backend
        contactForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            
            // Show loading state
            submitBtn.disabled = true;
            submitBtn.innerHTML = '⏳ Envoi en cours...';
            
            try {
                // Envoyer le formulaire au backend
                const formData = new FormData(contactForm);
                
                const response = await fetch('/contact', {
                    method: 'POST',
                    body: formData
                });

                if (response.ok) {
                    // Succès
                    successMessageAjax.style.display = 'block';
                    successMessageAjax.classList.add('show');
                    contactForm.reset();
                    selectedFiles = [];
                    uploadedFiles.innerHTML = '';
                    
                    // Scroll to top
                    window.scrollTo({ top: 0, behavior: 'smooth' });
                    
                    // Hide success message after 5 seconds
                    setTimeout(() => {
                        successMessageAjax.classList.remove('show');
                    }, 5000);
                } else {
                    // Erreur
                    alert('❌ Une erreur s\'est produite. Veuillez réessayer.');
                }
            } catch (error) {
                console.error('Erreur:', error);
                alert('❌ Erreur de connexion. Veuillez vérifier votre connexion internet.');
            } finally {
                // Reset button
                submitBtn.disabled = false;
                submitBtn.innerHTML = '📤 Envoyer le message';
            }
        });

        // Garder tout le reste de votre JavaScript existant
        // (validation, FAQ, formatting, etc.)
        
        console.log('💬 Page Contact ADSIAM chargée avec backend intégré');
    </script>
