<% layout('layout') -%>
<% contentFor('head') -%>
<title>Mon Profil | ADSIAM</title>
<% contentFor('scripts') -%>

<style>
.profil-container {
    padding: 2rem;
    max-width: 1400px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 3rem;
}

.profil-sidebar {
    display: flex;
    flex-direction: column;
    gap: 2rem;
}

.profil-card {
    background: var(--white);
    border-radius: var(--border-radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow);
    transition: var(--transition);
}

.profil-header {
    background: var(--gradient-contact);
    color: white;
    padding: 2.5rem;
    text-align: center;
    position: relative;
    overflow: hidden;
}

.profil-header::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -30%;
    width: 60%;
    height: 200%;
    background: radial-gradient(circle, rgba(255,255,255,0.2) 0%, transparent 70%);
    animation: profilePulse 4s ease-in-out infinite;
}

@keyframes profilePulse {
    0%, 100% { opacity: 0.3; }
    50% { opacity: 0.6; }
}

.avatar-container {
    position: relative;
    margin-bottom: 1.5rem;
    z-index: 2;
}

.avatar-large {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    background: rgba(255,255,255,0.2);
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto;
    font-size: 3rem;
    border: 4px solid rgba(255,255,255,0.3);
    position: relative;
    overflow: hidden;
}

.avatar-large img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 50%;
}

.avatar-upload {
    position: absolute;
    bottom: 0;
    right: 0;
    background: var(--primary-blue);
    width: 35px;
    height: 35px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    cursor: pointer;
    transition: var(--transition);
    border: 3px solid white;
}

.avatar-upload:hover {
    background: var(--success);
    transform: scale(1.1);
}

.avatar-upload input[type="file"] {
    position: absolute;
    width: 100%;
    height: 100%;
    opacity: 0;
    cursor: pointer;
}

.user-name {
    font-size: 1.8rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    z-index: 2;
    position: relative;
}

.user-role {
    font-size: 1rem;
    opacity: 0.9;
    margin-bottom: 1.5rem;
    z-index: 2;
    position: relative;
}

.user-stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
    z-index: 2;
    position: relative;
}

.user-stat {
    text-align: center;
}

.stat-number {
    font-size: 1.5rem;
    font-weight: 700;
    display: block;
    margin-bottom: 0.2rem;
}

.stat-label {
    font-size: 0.8rem;
    opacity: 0.8;
}

.quick-actions {
    padding: 1.5rem;
    background: var(--soft-gray);
}

.quick-action {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 0;
    color: var(--text-dark);
    text-decoration: none;
    transition: var(--transition);
    border-bottom: 1px solid rgba(0,0,0,0.1);
}

.quick-action:last-child {
    border-bottom: none;
}

.quick-action:hover {
    color: var(--primary-blue);
    transform: translateX(5px);
}

.quick-action-icon {
    font-size: 1.2rem;
    width: 25px;
    text-align: center;
}

.activity-card {
    background: var(--white);
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow);
    padding: 2rem;
}

.activity-title {
    font-size: 1.3rem;
    font-weight: 600;
    color: var(--text-dark);
    margin-bottom: 1.5rem;
    display: flex;
    align-items: center;
    gap: 0.8rem;
}

.activity-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.activity-item {
    display: flex;
    gap: 1rem;
    padding: 1rem;
    background: var(--soft-gray);
    border-radius: var(--border-radius);
    transition: var(--transition);
}

.activity-item:hover {
    background: var(--light-blue);
}

.activity-icon {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.1rem;
    color: white;
    flex-shrink: 0;
}

.activity-formation { background: var(--gradient-pink); }
.activity-message { background: var(--gradient-blue); }
.activity-certificat { background: var(--gradient-green); }

.activity-content {
    flex: 1;
}

.activity-text {
    font-weight: 500;
    color: var(--text-dark);
    margin-bottom: 0.3rem;
}

.activity-time {
    font-size: 0.85rem;
    color: var(--text-light);
}

.profil-main {
    display: flex;
    flex-direction: column;
    gap: 2rem;
}

.section-card {
    background: var(--white);
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow);
    overflow: hidden;
}

.section-header {
    padding: 2rem 2rem 1rem;
    border-bottom: 1px solid var(--soft-gray);
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.section-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--text-dark);
    display: flex;
    align-items: center;
    gap: 0.8rem;
}

.section-icon {
    font-size: 1.3rem;
}

.edit-btn {
    background: none;
    border: 2px solid var(--primary-blue);
    color: var(--primary-blue);
    padding: 0.6rem 1.2rem;
    border-radius: var(--border-radius);
    cursor: pointer;
    transition: var(--transition);
    font-weight: 500;
}

.edit-btn:hover {
    background: var(--primary-blue);
    color: white;
}

.section-content {
    padding: 2rem;
}

.form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    margin-bottom: 2rem;
}

.form-group {
    display: flex;
    flex-direction: column;
}

.form-label {
    font-weight: 600;
    color: var(--text-dark);
    margin-bottom: 0.5rem;
    font-size: 0.9rem;
}

.form-input {
    padding: 1rem;
    border: 2px solid var(--soft-gray);
    border-radius: var(--border-radius);
    font-size: 1rem;
    transition: var(--transition);
    background: var(--soft-gray);
}

.form-input:focus {
    outline: none;
    border-color: var(--primary-blue);
    background: var(--white);
    box-shadow: 0 0 0 3px rgba(165, 191, 212, 0.2);
}

.form-input:disabled {
    background: var(--soft-gray);
    color: var(--text-light);
    cursor: not-allowed;
}

.form-actions {
    display: flex;
    gap: 1rem;
    justify-content: flex-end;
    padding-top: 2rem;
    border-top: 1px solid var(--soft-gray);
}

.preferences-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
}

.preference-group {
    background: var(--soft-gray);
    padding: 1.5rem;
    border-radius: var(--border-radius);
}

.preference-title {
    font-weight: 600;
    color: var(--text-dark);
    margin-bottom: 1rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.preference-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.8rem 0;
    border-bottom: 1px solid rgba(0,0,0,0.1);
}

.preference-item:last-child {
    border-bottom: none;
}

.preference-label {
    color: var(--text-dark);
    font-size: 0.95rem;
}

.toggle-switch {
    position: relative;
    width: 50px;
    height: 25px;
    background: var(--text-light);
    border-radius: 25px;
    cursor: pointer;
    transition: var(--transition);
}

.toggle-switch.active {
    background: var(--primary-blue);
}

.toggle-switch::before {
    content: '';
    position: absolute;
    width: 21px;
    height: 21px;
    background: white;
    border-radius: 50%;
    top: 2px;
    left: 2px;
    transition: var(--transition);
}

.toggle-switch.active::before {
    transform: translateX(25px);
}

.security-section {
    background: var(--white);
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow);
    overflow: hidden;
}

.security-item {
    padding: 1.5rem 2rem;
    border-bottom: 1px solid var(--soft-gray);
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.security-item:last-child {
    border-bottom: none;
}

.security-info h4 {
    color: var(--text-dark);
    font-weight: 600;
    margin-bottom: 0.3rem;
}

.security-info p {
    color: var(--text-light);
    font-size: 0.9rem;
}

.security-status {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9rem;
    font-weight: 500;
}

.status-secure {
    color: var(--success);
}

.status-warning {
    color: var(--warning);
}

.delete-account {
    background: #fff5f5;
    border: 2px solid rgba(220, 53, 69, 0.2);
    border-radius: var(--border-radius-lg);
    padding: 2rem;
    margin-top: 2rem;
}

.delete-title {
    color: var(--danger);
    font-weight: 600;
    margin-bottom: 1rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.delete-description {
    color: var(--text-dark);
    margin-bottom: 1.5rem;
    line-height: 1.6;
}

.btn-danger {
    background: var(--danger);
    color: white;
    border: none;
    padding: 1rem 2rem;
    border-radius: var(--border-radius);
    font-weight: 600;
    cursor: pointer;
    transition: var(--transition);
}

.btn-danger:hover {
    background: #c82333;
    transform: translateY(-2px);
}

@media (max-width: 1024px) {
    .profil-container {
        grid-template-columns: 1fr;
        gap: 2rem;
        padding: 1rem;
    }
    
    .form-row {
        grid-template-columns: 1fr;
        gap: 1rem;
    }
    
    .preferences-grid {
        grid-template-columns: 1fr;
    }
}

@media (max-width: 768px) {
    .profil-header {
        padding: 2rem;
    }
    
    .user-stats {
        grid-template-columns: repeat(2, 1fr);
    }
    
    .form-actions {
        flex-direction: column-reverse;
    }
    
    .section-header {
        padding: 1.5rem;
        flex-direction: column;
        gap: 1rem;
        align-items: stretch;
    }
}
</style>

<div class="dashboard-layout">
    <%- include('partials/sidebar') %>
    
    <main class="main-content">
        <%- include('partials/header', { 
            pageTitle: 'Mon Profil', 
            pageIcon: '👤',
            pageSubtitle: 'Gérez vos informations personnelles et préférences',
            showSearch: false 
        }) %>
        
        <div class="profil-container">
            <!-- Sidebar Profil -->
            <div class="profil-sidebar">
                <div class="profil-card fade-in">
                    <div class="profil-header">
                        <div class="avatar-container">
                            <div class="avatar-large">
                                <% if (user && user.avatar) { %>
                                    <img src="<%= user.avatar %>" alt="Avatar" id="currentAvatar">
                                <% } else if (user && user.prenom) { %>
                                    <%= user.prenom.charAt(0).toUpperCase() %>
                                <% } else { %>
                                    👤
                                <% } %>
                                <div class="avatar-upload" title="Changer la photo">
                                    <input type="file" accept="image/*" id="avatarUpload">
                                    📷
                                </div>
                            </div>
                        </div>
                        
                        <h2 class="user-name">
                            <%= user && user.prenom ? user.prenom : 'Utilisateur' %> 
                            <%= user && user.nom ? user.nom : '' %>
                        </h2>
                        
                        <p class="user-role">
                            <% if (user && user.type_utilisateur === 'aide_domicile') { %>
                                Aide à domicile
                            <% } else if (user && user.type_utilisateur === 'aide_soignant') { %>
                                Aide-soignant
                            <% } else if (user && user.type_utilisateur === 'formateur') { %>
                                Formateur
                            <% } else { %>
                                Apprenant
                            <% } %>
                        </p>
                        
                        <div class="user-stats">
                            <div class="user-stat">
                                <span class="stat-number" data-count="<%= stats ? stats.formationsTerminees : 0 %>">0</span>
                                <span class="stat-label">Formations</span>
                            </div>
                            <div class="user-stat">
                                <span class="stat-number" data-count="<%= stats ? stats.certificats : 0 %>">0</span>
                                <span class="stat-label">Certificats</span>
                            </div>
                            <div class="user-stat">
                                <span class="stat-number" data-count="<%= stats ? stats.heuresFormation : 0 %>">0</span>
                                <span class="stat-label">Heures</span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="quick-actions">
                        <a href="/mes-formations" class="quick-action">
                            <span class="quick-action-icon">📚</span>
                            <span>Mes formations</span>
                        </a>
                        <a href="/mes-certifications" class="quick-action">
                            <span class="quick-action-icon">🏆</span>
                            <span>Mes certificats</span>
                        </a>
                        <a href="/mes-messages" class="quick-action">
                            <span class="quick-action-icon">💬</span>
                            <span>Mes messages</span>
                        </a>
                        <a href="/support" class="quick-action">
                            <span class="quick-action-icon">🎧</span>
                            <span>Support</span>
                        </a>
                    </div>
                </div>
                
                <div class="activity-card fade-in">
                    <h3 class="activity-title">
                        📈 Activité récente
                    </h3>
                    <div class="activity-list">
                        <% if (activites && activites.length > 0) { %>
                            <% activites.slice(0, 5).forEach(activite => { %>
                                <div class="activity-item">
                                    <div class="activity-icon activity-<%= activite.type %>">
                                        <% if (activite.type === 'formation') { %>
                                            📚
                                        <% } else if (activite.type === 'message') { %>
                                            💬
                                        <% } else { %>
                                            🎖️
                                        <% } %>
                                    </div>
                                    <div class="activity-content">
                                        <div class="activity-text"><%= activite.titre %></div>
                                        <div class="activity-time">
                                            <%= new Date(activite.createdat).toLocaleDateString('fr-FR', {
                                                day: 'numeric',
                                                month: 'short',
                                                hour: '2-digit',
                                                minute: '2-digit'
                                            }) %>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        <% } else { %>
                            <div style="text-align: center; color: var(--text-light); padding: 2rem;">
                                Aucune activité récente
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>

            <!-- Main Content -->
            <div class="profil-main">
                <!-- Informations personnelles -->
                <div class="section-card fade-in">
                    <div class="section-header">
                        <h3 class="section-title">
                            <span class="section-icon">👤</span>
                            Informations personnelles
                        </h3>
                        <button class="edit-btn" onclick="toggleEdit('personal')">
                            ✏️ Modifier
                        </button>
                    </div>
                    
                    <div class="section-content">
                        <form id="personalForm" class="ajax-form" action="/api/profil/update" method="POST">
                            <div class="form-row">
                                <div class="form-group">
                                    <label class="form-label">Prénom</label>
                                    <input type="text" class="form-input" name="prenom" 
                                           value="<%= user && user.prenom ? user.prenom : '' %>" disabled>
                                </div>
                                <div class="form-group">
                                    <label class="form-label">Nom</label>
                                    <input type="text" class="form-input" name="nom" 
                                           value="<%= user && user.nom ? user.nom : '' %>" disabled>
                                </div>
                            </div>
                            
                            <div class="form-row">
                                <div class="form-group">
                                    <label class="form-label">Email</label>
                                    <input type="email" class="form-input" name="email" 
                                           value="<%= user && user.email ? user.email : '' %>" disabled>
                                </div>
                                <div class="form-group">
                                    <label class="form-label">Téléphone</label>
                                    <input type="tel" class="form-input" name="telephone" 
                                           value="<%= user && user.telephone ? user.telephone : '' %>" disabled>
                                </div>
                            </div>
                            
                            <div class="form-row">
                                <div class="form-group">
                                    <label class="form-label">Date de naissance</label>
                                    <input type="date" class="form-input" name="date_naissance" 
                                           value="<%= user && user.date_naissance ? user.date_naissance.toISOString().split('T')[0] : '' %>" disabled>
                                </div>
                                <div class="form-group">
                                    <label class="form-label">Établissement</label>
                                    <input type="text" class="form-input" name="etablissement" 
                                           value="<%= user && user.etablissement ? user.etablissement : '' %>" disabled>
                                </div>
                            </div>
                            
                            <div class="form-row">
                                <div class="form-group">
                                    <label class="form-label">Ville</label>
                                    <input type="text" class="form-input" name="ville" 
                                           value="<%= user && user.ville ? user.ville : '' %>" disabled>
                                </div>
                                <div class="form-group">
                                    <label class="form-label">Code postal</label>
                                    <input type="text" class="form-input" name="code_postal" 
                                           value="<%= user && user.code_postal ? user.code_postal : '' %>" disabled>
                                </div>
                            </div>
                            
                            <div class="form-actions" style="display: none;">
                                <button type="button" class="btn btn-outline" onclick="cancelEdit('personal')">
                                    Annuler
                                </button>
                                <button type="submit" class="btn btn-primary">
                                    💾 Enregistrer
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Préférences -->
                <div class="section-card fade-in">
                    <div class="section-header">
                        <h3 class="section-title">
                            <span class="section-icon">⚙️</span>
                            Préférences
                        </h3>
                    </div>
                    
                    <div class="section-content">
                        <div class="preferences-grid">
                            <div class="preference-group">
                                <h4 class="preference-title">
                                    🔔 Notifications
                                </h4>
                                <div class="preference-item">
                                    <span class="preference-label">Notifications email</span>
                                    <div class="toggle-switch active" onclick="togglePreference(this, 'email_notifications')">
                                    </div>
                                </div>
                                <div class="preference-item">
                                    <span class="preference-label">Notifications push</span>
                                    <div class="toggle-switch" onclick="togglePreference(this, 'push_notifications')">
                                    </div>
                                </div>
                                <div class="preference-item">
                                    <span class="preference-label">Rappels de formation</span>
                                    <div class="toggle-switch active" onclick="togglePreference(this, 'formation_reminders')">
                                    </div>
                                </div>
                            </div>
                            
                            <div class="preference-group">
                                <h4 class="preference-title">
                                    📧 Communications
                                </h4>
                                <div class="preference-item">
                                    <span class="preference-label">Newsletter ADSIAM</span>
                                    <div class="toggle-switch active" onclick="togglePreference(this, 'newsletter')">
                                    </div>
                                </div>
                                <div class="preference-item">
                                    <span class="preference-label">Offres spéciales</span>
                                    <div class="toggle-switch" onclick="togglePreference(this, 'offers')">
                                    </div>
                                </div>
                                <div class="preference-item">
                                    <span class="preference-label">Enquêtes de satisfaction</span>
                                    <div class="toggle-switch active" onclick="togglePreference(this, 'surveys')">
                                    </div>
                                </div>
                            </div>
                            
                            <div class="preference-group">
                                <h4 class="preference-title">
                                    🎨 Interface
                                </h4>
                                <div class="preference-item">
                                    <span class="preference-label">Mode sombre</span>
                                    <div class="toggle-switch" onclick="togglePreference(this, 'dark_mode')">
                                    </div>
                                </div>
                                <div class="preference-item">
                                    <span class="preference-label">Animations</span>
                                    <div class="toggle-switch active" onclick="togglePreference(this, 'animations')">
                                    </div>
                                </div>
                                <div class="preference-item">
                                    <span class="preference-label">Sons</span>
                                    <div class="toggle-switch active" onclick="togglePreference(this, 'sounds')">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Sécurité -->
                <div class="section-card fade-in">
                    <div class="section-header">
                        <h3 class="section-title">
                            <span class="section-icon">🔒</span>
                            Sécurité
                        </h3>
                    </div>
                    
                    <div class="security-section">
                        <div class="security-item">
                            <div class="security-info">
                                <h4>Mot de passe</h4>
                                <p>Dernière modification il y a 2 mois</p>
                            </div>
                            <div class="security-status status-secure">
                                ✅ Sécurisé
                            </div>
                            <button class="btn btn-outline" onclick="changerMotDePasse()">
                                Modifier
                            </button>
                        </div>
                        
                        <div class="security-item">
                            <div class="security-info">
                                <h4>Authentification à deux facteurs</h4>
                                <p>Sécurité renforcée pour votre compte</p>
                            </div>
                            <div class="security-status status-warning">
                                ⚠️ Non activée
                            </div>
                            <button class="btn btn-primary" onclick="activerA2F()">
                                Activer
                            </button>
                        </div>
                        
                        <div class="security-item">
                            <div class="security-info">
                                <h4>Sessions actives</h4>
                                <p>Gérez vos connexions actives</p>
                            </div>
                            <div class="security-status">
                                3 appareils
                            </div>
                            <button class="btn btn-outline" onclick="voirSessions()">
                                Gérer
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Suppression de compte -->
                <div class="delete-account fade-in">
                    <h3 class="delete-title">
                        ⚠️ Zone dangereuse
                    </h3>
                    <p class="delete-description">
                        La suppression de votre compte est définitive. Toutes vos données, formations et certificats seront perdus. Cette action ne peut pas être annulée.
                    </p>
                    <button class="btn-danger" onclick="supprimerCompte()">
                        🗑️ Supprimer mon compte
                    </button>
                </div>
            </div>
        </div>
    </main>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    console.log('👤 Page Profil chargée');
    
    // Upload avatar
    const avatarUpload = document.getElementById('avatarUpload');
    if (avatarUpload) {
        avatarUpload.addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                if (file.size > 5 * 1024 * 1024) { // 5MB
                    window.ADSIAM_APP.showToast('Fichier trop volumineux (max 5MB)', 'warning');
                    return;
                }
                
                const reader = new FileReader();
                reader.onload = function(e) {
                    const currentAvatar = document.getElementById('currentAvatar');
                    if (currentAvatar) {
                        currentAvatar.src = e.target.result;
                    } else {
                        const avatarLarge = document.querySelector('.avatar-large');
                        avatarLarge.innerHTML = `<img src="${e.target.result}" alt="Avatar" id="currentAvatar">` + avatarLarge.querySelector('.avatar-upload').outerHTML;
                    }
                    
                    // Upload the image
                    uploadAvatar(file);
                };
                reader.readAsDataURL(file);
            }
        });
    }
});

async function uploadAvatar(file) {
    const formData = new FormData();
    formData.append('avatar', file);
    
    try {
        const response = await fetch('/api/profil/avatar', {
            method: 'POST',
            body: formData
        });
        
        const data = await response.json();
        if (data.success) {
            window.ADSIAM_APP.showToast('Photo mise à jour avec succès', 'success');
        } else {
            window.ADSIAM_APP.showToast(data.message || 'Erreur lors de la mise à jour', 'error');
        }
    } catch (error) {
        console.error('Erreur upload avatar:', error);
        window.ADSIAM_APP.showToast('Erreur de connexion', 'error');
    }
}

function toggleEdit(section) {
    const form = document.getElementById(section + 'Form');
    const inputs = form.querySelectorAll('.form-input');
    const actions = form.querySelector('.form-actions');
    const editBtn = form.parentElement.querySelector('.edit-btn');
    
    const isEditing = !inputs[0].disabled;
    
    if (isEditing) {
        // Cancel edit
        inputs.forEach(input => input.disabled = true);
        actions.style.display = 'none';
        editBtn.innerHTML = '✏️ Modifier';
    } else {
        // Start edit
        inputs.forEach(input => input.disabled = false);
        actions.style.display = 'flex';
        editBtn.innerHTML = '❌ Annuler';
    }
}

function cancelEdit(section) {
    toggleEdit(section);
    // Reset form values
    const form = document.getElementById(section + 'Form');
    form.reset();
}

async function togglePreference(element, preference) {
    element.classList.toggle('active');
    const isActive = element.classList.contains('active');
    
    try {
        const response = await fetch('/api/profil/preferences', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                preference: preference,
                value: isActive
            })
        });
        
        const data = await response.json();
        if (data.success) {
            window.ADSIAM_APP.showToast(`Préférence ${isActive ? 'activée' : 'désactivée'}`, 'success');
        } else {
            // Revert UI change
            element.classList.toggle('active');
            window.ADSIAM_APP.showToast('Erreur de mise à jour', 'error');
        }
    } catch (error) {
        console.error('Erreur préférences:', error);
        element.classList.toggle('active');
        window.ADSIAM_APP.showToast('Erreur de connexion', 'error');
    }
}

function changerMotDePasse() {
    const modal = `
        <div class="modal-overlay" onclick="fermerModal()">
            <div class="modal-content" onclick="event.stopPropagation()">
                <h3>Changer le mot de passe</h3>
                <form class="ajax-form" action="/api/profil/password" method="POST">
                    <div class="form-group">
                        <label class="form-label">Mot de passe actuel</label>
                        <input type="password" class="form-control" name="current_password" required>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Nouveau mot de passe</label>
                        <input type="password" class="form-control" name="new_password" required minlength="8">
                    </div>
                    <div class="form-group">
                        <label class="form-label">Confirmer le nouveau mot de passe</label>
                        <input type="password" class="form-control" name="confirm_password" required>
                    </div>
                    <div class="modal-actions">
                        <button type="button" class="btn btn-outline" onclick="fermerModal()">Annuler</button>
                        <button type="submit" class="btn btn-primary">Modifier</button>
                    </div>
                </form>
            </div>
        </div>
    `;
    
    document.body.insertAdjacentHTML('beforeend', modal);
}

function activerA2F() {
    window.ADSIAM_APP.showToast('Redirection vers la configuration A2F...', 'info');
    window.location.href = '/securite/a2f';
}

function voirSessions() {
    window.location.href = '/securite/sessions';
}

function supprimerCompte() {
    const confirmation = prompt('Pour confirmer la suppression de votre compte, tapez "SUPPRIMER" :');
    
    if (confirmation === 'SUPPRIMER') {
        if (confirm('Êtes-vous absolument certain ? Cette action est irréversible.')) {
            fetch('/api/profil/delete', {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json'
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    window.ADSIAM_APP.showToast('Compte supprimé. Redirection...', 'success');
                    setTimeout(() => window.location.href = '/', 2000);
                } else {
                    window.ADSIAM_APP.showToast(data.message || 'Erreur de suppression', 'error');
                }
            })
            .catch(error => {
                console.error('Erreur suppression compte:', error);
                window.ADSIAM_APP.showToast('Erreur de connexion', 'error');
            });
        }
    } else if (confirmation !== null) {
        window.ADSIAM_APP.showToast('Confirmation incorrecte', 'warning');
    }
}

function fermerModal() {
    document.querySelector('.modal-overlay')?.remove();
}

// Gestion du drag & drop pour l'avatar
const avatarLarge = document.querySelector('.avatar-large');
if (avatarLarge) {
    ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
        avatarLarge.addEventListener(eventName, preventDefaults, false);
    });
    
    ['dragenter', 'dragover'].forEach(eventName => {
        avatarLarge.addEventListener(eventName, highlight, false);
    });
    
    ['dragleave', 'drop'].forEach(eventName => {
        avatarLarge.addEventListener(eventName, unhighlight, false);
    });
    
    avatarLarge.addEventListener('drop', handleDrop, false);
}

function preventDefaults(e) {
    e.preventDefault();
    e.stopPropagation();
}

function highlight() {
    avatarLarge.classList.add('drag-over');
}

function unhighlight() {
    avatarLarge.classList.remove('drag-over');
}

function handleDrop(e) {
    const dt = e.dataTransfer;
    const files = dt.files;
    
    if (files.length > 0) {
        const file = files[0];
        if (file.type.startsWith('image/')) {
            document.getElementById('avatarUpload').files = files;
            document.getElementById('avatarUpload').dispatchEvent(new Event('change'));
        } else {
            window.ADSIAM_APP.showToast('Veuillez sélectionner une image', 'warning');
        }
    }
}
</script>

