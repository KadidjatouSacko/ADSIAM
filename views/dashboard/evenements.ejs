    border: 1px solid var(--soft-gray);
}

.calendar-day-header {
    background: var(--soft-gray);
    padding: 0.8rem;
    text-align: center;
    font-weight: 600;
    color: var(--text-dark);
    font-size: 0.9rem;
}

.calendar-day-number {
