    align-items: center;
    justify-content: center;
    font-size: 0.8rem;
}

.calendar-event {
    background: var(--gradient-orange);
    color: white;
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
    font-size: 0.7rem;
    margin-bottom: 0.2rem;
    cursor: pointer;
    transition: var(--transition);
}

.calendar-event:hover {
