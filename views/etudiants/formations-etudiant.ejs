    <script>
        // Toggle between grid and list view
        function toggleView(viewType) {
            const gridView = document.getElementById('gridView');
            const listView = document.getElementById('listView');
            const buttons = document.querySelectorAll('.view-btn');
            
            buttons.forEach(btn => btn.classList.remove('active'));
            
            if (viewType === 'grid') {
                gridView.style.display = 'grid';
                listView.classList.remove('active');
                buttons[0].classList.add('active');
            } else {
                gridView.style.display = 'none';
                listView.classList.add('active');
                buttons[1].classList.add('active');
            }
        }

        // Filter by tag
        function filterByTag(tag) {
            const tags = document.querySelectorAll('.filter-tag');
            const cards = document.querySelectorAll('.formation-card');
            
            tags.forEach(t => t.classList.remove('active'));
            event.target.classList.add('active');
            
            cards.forEach(card => {
                card.style.display = 'block';
                card.style.animation = 'fadeInUp 0.5s ease forwards';
            });
            
            if (tag !== 'all') {
                // Simulation du filtrage
                setTimeout(() => {
                    if (tag === 'favorites') {
                        // Masquer certaines cartes pour simulation
                        cards[2].style.display = 'none';
                        cards[4].style.display = 'none';
                    } else if (tag === 'urgent') {
                        // Afficher seulement les formations en cours
                        cards.forEach(card => {
                            if (card.dataset.status !== 'in-progress') {
                                card.style.display = 'none';
                            }
                        });
                    }
                }, 100);
            }
        }

        // Filters functionality
        document.getElementById('statusFilter').addEventListener('change', function() {
            const status = this.value;
            const cards = document.querySelectorAll('.formation-card');
            
            cards.forEach(card => {
                if (status === '' || card.dataset.status === status) {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });
        });

        document.getElementById('categoryFilter').addEventListener('change', function() {
            const category = this.value;
            const cards = document.querySelectorAll('.formation-card');
            
            cards.forEach(card => {
                if (category === '' || card.dataset.category === category) {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });
        });

        // Formation card interactions
        document.querySelectorAll('.formation-card').forEach(card => {
            card.addEventListener('click', function(e) {
                if (e.target.classList.contains('btn') || e.target.closest('.btn')) {
                    return;
                }
                
                const title = this.querySelector('.formation-title').textContent;
                const status = this.dataset.status;
                
                if (status === 'completed') {
                    alert(`📚 Formation: ${title}\n\n✅ Formation terminée\n🎓 Certificat disponible\n📊 Consulter les détails et statistiques`);
                } else if (status === 'in-progress') {
                    alert(`📚 Formation: ${title}\n\n📖 Formation en cours\n▶️ Reprendre où vous vous êtes arrêté\n📊 Voir la progression détaillée`);
                } else {
                    alert(`📚 Formation: ${title}\n\n🚀 Formation non commencée\n✨ Prêt à commencer votre apprentissage?\n📋 Consulter le programme détaillé`);
                }
            });
        });

        // Button interactions
        document.querySelectorAll('.btn').forEach(btn => {
            btn.addEventListener('click', function(e) {
                e.preventDefault();
                e.stopPropagation();
                
                const text = this.textContent.trim();
                const card = this.closest('.formation-card') || this.closest('.formation-list-item');
                const title = card.querySelector('.formation-title, h3').textContent;
                
                if (text.includes('Certificat')) {
                    alert(`🎓 Téléchargement du certificat\n\nFormation: ${title}\n\n✅ Certificat officiel ADSIAM\n📄 Format PDF téléchargeable\n🔗 Lien de vérification inclus\n📧 Envoi par email également`);
                } else if (text.includes('Continuer')) {
                    alert(`▶️ Reprise de la formation\n\nFormation: ${title}\n\n📖 Reprise au module en cours\n⏱️ Temps estimé restant affiché\n💾 Progression automatiquement sauvegardée`);
                } else if (text.includes('Commencer')) {
                    alert(`🚀 Début de la formation\n\nFormation: ${title}\n\n📚 Introduction et objectifs\n🎯 Premier module accessible\n⭐ Bonne formation avec ADSIAM!`);
                } else if (text.includes('Détails')) {
                    alert(`📊 Détails de la formation\n\nFormation: ${title}\n\n📈 Statistiques détaillées\n📝 Historique des modules\n💬 Messages du formateur\n📥 Ressources téléchargeables`);
                } else if (text.includes('Revoir')) {
                    alert(`📋 Révision de la formation\n\nFormation: ${title}\n\n🔄 Accès aux modules terminés\n📚 Ressources de révision\n🧠 Quiz de révision disponibles`);
                }
            });
        });

        // Animation on scroll
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.animation = 'fadeInUp 0.6s ease forwards';
                }
            });
        }, observerOptions);

        document.querySelectorAll('.fade-in').forEach(el => {
            observer.observe(el);
        });

        // Animate progress bars on load
        function animateProgressBars() {
            const progressBars = document.querySelectorAll('.progress-fill');
            progressBars.forEach((bar, index) => {
                setTimeout(() => {
                    bar.style.transform = 'scaleX(1)';
                }, index * 100);
            });
        }

        // Initialize
        window.addEventListener('load', () => {
            animateProgressBars();
            console.log('📚 Page Mes Formations ADSIAM chargée');
            console.log('🎯 6 formations affichées: 3 terminées, 2 en cours, 1 non commencée');
            console.log('⭐ Système de filtres et vues multiples opérationnel');
        });
    </script>
