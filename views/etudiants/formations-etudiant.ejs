    <script>
        // Toggle between grid and list view
        function toggleView(viewType) {
            const gridView = document.getElementById('gridView');
            const listView = document.getElementById('listView');
            const buttons = document.querySelectorAll('.view-btn');
            
            buttons.forEach(btn => btn.classList.remove('active'));
            
            if (viewType === 'grid') {
                gridView.style.display = 'grid';
                listView.classList.remove('active');
                buttons[0].classList.add('active');
            } else {
                gridView.style.display = 'none';
                listView.classList.add('active');
                buttons[1].classList.add('active');
            }
        }

        // Filter by tag
        function filterByTag(tag) {
            const tags = document.querySelectorAll('.filter-tag');
            const cards = document.querySelectorAll('.formation-card');
            
            tags.forEach(t => t.classList.remove('active'));
            event.target.classList.add('active');
            
            cards.forEach(card => {
                card.style.display = 'block';
                card.style.animation = 'fadeInUp 0.5s ease forwards';
            });
            
            if (tag !== 'all') {
                // Simulation du filtrage
                setTimeout(() => {
                    if (tag === 'favorites') {
                        // Masquer certaines cartes pour simulation
                        cards[2].style.display = 'none';
                        cards[4].style.display = 'none';
                    } else if (tag === 'urgent') {
                        // Afficher seulement les formations en cours
                        cards.forEach(card => {
                            if (card.dataset.status !== 'in-progress') {
                                card.style.display = 'none';
                            }
                        });
                    }
                }, 100);
            }
        }

        // Filters functionality
        document.getElementById('statusFilter').addEventListener('change', function() {
            const status = this.value;
            const cards = document.querySelectorAll('.formation-card');
            
            cards.forEach(card => {
                if (status === '' || card.dataset.status === status) {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });
        });

        document.getElementById('categoryFilter').addEventListener('change', function() {
            const category = this.value;
            const cards = document.querySelectorAll('.formation-card');
            
            cards.forEach(card => {
                if (category === '' || card.dataset.category === category) {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });
        });

        // Formation card interactions
        document.querySelectorAll('.formation-card').forEach(card => {
            card.addEventListener('click', function(e) {
                if (e.target.classList.contains('btn') || e.target.closest('.btn')) {
                    return;
                }
                
                const title = this.querySelector('.formation-title').textContent;
                const status = this.dataset.status;
                
                if (status === 'completed') {
                    alert(`ğŸ“š Formation: ${title}\n\nâœ… Formation terminÃ©e\nğŸ“ Certificat disponible\nğŸ“Š Consulter les dÃ©tails et statistiques`);
                } else if (status === 'in-progress') {
                    alert(`ğŸ“š Formation: ${title}\n\nğŸ“– Formation en cours\nâ–¶ï¸ Reprendre oÃ¹ vous vous Ãªtes arrÃªtÃ©\nğŸ“Š Voir la progression dÃ©taillÃ©e`);
                } else {
