<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mes Formations | ADSIAM Étudiant</title>
    <link rel="stylesheet" href="/css/formations-etudiant.css">
</head>
<body>
    <!-- Header -->
    <%- include('../partials/header-etudiant') %>

    <!-- Main Container -->
    <div class="main-container">
        <!-- Page Header -->
        <section class="page-header fade-in">
            <h1 class="page-title">Mes Formations 📚</h1>
            <p class="page-subtitle">Suivez votre progression et continuez votre parcours d'apprentissage ADSIAM</p>
           <!-- Statistiques -->
<div class="page-stats">
    <div class="stat-card">
        <span class="stat-number"><%= stats.total %></span>
        <span class="stat-label">Formations inscrites</span>
    </div>
    <div class="stat-card">
        <span class="stat-number"><%= stats.terminees %></span>
        <span class="stat-label">Formations terminées</span>
    </div>
    <div class="stat-card">
        <span class="stat-number"><%= stats.enCours %></span>
        <span class="stat-label">En cours</span>
    </div>
    <div class="stat-card">
        <span class="stat-number"><%= stats.progressionMoyenne %>%</span>
        <span class="stat-label">Progression moyenne</span>
    </div>
</div> 
           
        </section>

        <!-- Filters Section -->
        <section class="filters-section fade-in">
            <div class="filters-header">
                <h2 class="filters-title">Filtrer et organiser</h2>
                <div class="view-toggle">
                    <button class="view-btn active" onclick="toggleView('grid')">⊞</button>
                    <button class="view-btn" onclick="toggleView('list')">☰</button>
                </div>
            </div>
            
            <div class="filters-row">
                <div class="filter-group">
                    <label class="filter-label">Statut</label>
                    <select class="filter-select" id="statusFilter">
                        <option value="">Tous les statuts</option>
                        <option value="completed">Terminées</option>
                        <option value="in-progress">En cours</option>
                        <option value="not-started">Non commencées</option>
                    </select>
                </div>
                
                <div class="filter-group">
                    <label class="filter-label">Catégorie</label>
                    <select class="filter-select" id="categoryFilter">
                        <option value="">Toutes les catégories</option>
                        <option value="communication">Communication</option>
                        <option value="hygiene">Hygiène & Sécurité</option>
                        <option value="urgences">Premiers Secours</option>
                        <option value="pathologies">Pathologies</option>
                    </select>
                </div>
                
                <div class="filter-group">
                    <label class="filter-label">Niveau</label>
                    <select class="filter-select" id="levelFilter">
                        <option value="">Tous les niveaux</option>
                        <option value="debutant">Débutant</option>
                        <option value="intermediaire">Intermédiaire</option>
                        <option value="avance">Avancé</option>
                    </select>
                </div>
                
                <div class="filter-group">
                    <label class="filter-label">Trier par</label>
                    <select class="filter-select" id="sortFilter">
                        <option value="progress">Progression</option>
                        <option value="name">Nom A-Z</option>
                        <option value="date">Date d'inscription</option>
                        <option value="completion">Date de fin</option>
                    </select>
                </div>
            </div>
            
            <div class="filter-tags">
                <button class="filter-tag active" onclick="filterByTag('all')">Toutes</button>
                <button class="filter-tag" onclick="filterByTag('favorites')">⭐ Favorites</button>
                <button class="filter-tag" onclick="filterByTag('urgent')">⚡ À terminer</button>
                <button class="filter-tag" onclick="filterByTag('new')">🆕 Récentes</button>
                <button class="filter-tag" onclick="filterByTag('certified')">🎓 Certifiantes</button>
            </div>
        </section>

        <!-- Formations Grid View -->
       <section class="formations-container" id="gridView">
    <% formations.forEach(f => { %>
        <div class="formation-card fade-in" data-status="<%= f.statut %>" data-category="<%= f.categorie %>" data-level="<%= f.niveau %>">
            <div class="formation-header">
                <div class="formation-icon">📘</div>
                <div class="formation-status status-<%= f.statut %>">
                    <% if(f.statut === 'completed'){ %>
                        Terminée ✓
                    <% } else if(f.statut === 'in-progress'){ %>
                        En cours
                    <% } else { %>
                        Non commencée
                    <% } %>
                </div>
            </div>
            <div class="formation-content">
                <div class="formation-meta">
                    <span class="meta-tag level-tag"><%= f.niveau %></span>
                    <span class="meta-tag duration-tag"><%= f.tempsTotal %>h</span>
                    <span class="meta-tag modules-tag"><%= f.modulesTotal %> modules</span>
                </div>
                <h3 class="formation-title"><%= f.titre %></h3>
                <p class="formation-description"><%= f.description %></p>
                
                <div class="formation-progress">
                    <div class="progress-header">
                        <span class="progress-label">Progression</span>
                        <span class="progress-percentage"><%= f.progressionPourcentage %>%</span>
                    </div>
                    <div class="progress-bar">
                        <div class="progress-fill" style="width: <%= f.progressionPourcentage %>%"></div>
                    </div>
                </div>
                
                <div class="formation-footer">
                    <span class="last-activity">
                        <% if(f.dernierAcces){ %>
                            Dernière activité: <%= f.dernierAcces.toLocaleDateString('fr-FR') %>
                        <% } %>
                    </span>
                    <div class="formation-actions">
                        <% if(f.certificat){ %>
                            <a href="#" class="btn btn-success">🎓 Certificat</a>
                        <% } %>
                        <% if(f.statut !== 'not-started'){ %>
                            <a href="#" class="btn btn-secondary">📋 Revoir</a>
                        <% } else { %>
                            <a href="#" class="btn btn-primary">🚀 Commencer</a>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    <% }) %>
</section>

        <!-- List View (Initially Hidden) -->
  <section class="formations-list" id="listView">
    <% formations.forEach(f => { %>
    <div class="formation-list-item">
        <div class="list-icon" 
             style="background: <% 
                if(f.categorie === 'communication'){ %>var(--gradient-pink)<% } 
                else if(f.categorie === 'hygiene'){ %>var(--gradient-blue)<% } 
                else if(f.categorie === 'urgences'){ %>var(--gradient-red)<% } 
                else if(f.categorie === 'pathologies'){ %>var(--gradient-purple)<% } 
                else { %>var(--gradient-grey)<% } %>;">
            <% 
                if(f.categorie === 'communication'){ %>🗣️<% } 
                else if(f.categorie === 'hygiene'){ %>🛡️<% } 
                else if(f.categorie === 'urgences'){ %>🚨<% } 
                else if(f.categorie === 'pathologies'){ %>🧠<% } 
                else { %>📘<% } %>
        </div>

        <div class="list-content">
            <div class="list-info">
                <h3><%= f.titre %></h3>
                <p>
                    <% if(f.statut === 'completed'){ %>Formation terminée<% } %>
                    <% if(f.statut === 'in-progress'){ %>En cours<% } %>
                    <% if(f.statut === 'not-started'){ %>Non commencée<% } %> • 
                    <%= f.modulesTotal %> modules • Niveau <%= f.niveau %>
                </p>
            </div>

            <div class="list-progress">
                <div class="progress-header">
                    <span class="progress-label"><%= f.progressionPourcentage %>%</span>
                </div>
                <div class="progress-bar">
                    <div class="progress-fill" style="width: <%= f.progressionPourcentage %>%"></div>
                </div>
                <% if(f.statut !== 'not-started'){ %>
                <span style="font-size: 0.8rem; color: var(--text-light);">
                    Score: <%= f.score || '-' %>%
                </span>
                <% } %>
            </div>

            <div class="list-stats">
                <% if(f.statut === 'completed'){ %>
                    <span>✅ Terminée <%= f.dernierAcces ? `il y a ${f.dernierAcces}` : '' %></span>
                <% } else if(f.statut === 'in-progress'){ %>
                    <span>📚 Module <%= f.moduleActuel %>/<%= f.modulesTotal %></span>
                    <span>⏱️ <%= f.tempsTotal %> de formation</span>
                    <span>🕐 Dernière activité: <%= f.dernierAcces %></span>
                <% } else { %>
                    <span>Inscrite <%= f.dernierAcces ? `il y a ${f.dernierAcces}` : '' %></span>
                <% } %>
            </div>
        </div>

        <div class="list-actions">
            <% if(f.certificat && f.statut === 'completed'){ %>
                <a href="#" class="btn btn-success">🎓 Certificat</a>
            <% } %>
            <% if(f.statut !== 'not-started'){ %>
                <a href="#" class="btn btn-secondary">📋 Revoir</a>
            <% } else { %>
                <a href="#" class="btn btn-primary">🚀 Commencer</a>
            <% } %>
        </div>
    </div>
    <% }) %>
</section>


    </div>

    <%- include('../partials/footer') %>
    <script>
        // Toggle between grid and list view
        function toggleView(viewType) {
            const gridView = document.getElementById('gridView');
            const listView = document.getElementById('listView');
            const buttons = document.querySelectorAll('.view-btn');
            
            buttons.forEach(btn => btn.classList.remove('active'));
            
            if (viewType === 'grid') {
                gridView.style.display = 'grid';
                listView.classList.remove('active');
                buttons[0].classList.add('active');
            } else {
                gridView.style.display = 'none';
                listView.classList.add('active');
                buttons[1].classList.add('active');
            }
        }

        // Filter by tag
        function filterByTag(tag) {
            const tags = document.querySelectorAll('.filter-tag');
            const cards = document.querySelectorAll('.formation-card');
            
            tags.forEach(t => t.classList.remove('active'));
            event.target.classList.add('active');
            
            cards.forEach(card => {
                card.style.display = 'block';
                card.style.animation = 'fadeInUp 0.5s ease forwards';
            });
            
            if (tag !== 'all') {
                // Simulation du filtrage
                setTimeout(() => {
                    if (tag === 'favorites') {
                        // Masquer certaines cartes pour simulation
                        cards[2].style.display = 'none';
                        cards[4].style.display = 'none';
                    } else if (tag === 'urgent') {
                        // Afficher seulement les formations en cours
                        cards.forEach(card => {
                            if (card.dataset.status !== 'in-progress') {
                                card.style.display = 'none';
                            }
                        });
                    }
                }, 100);
            }
        }

        // Filters functionality
        document.getElementById('statusFilter').addEventListener('change', function() {
            const status = this.value;
            const cards = document.querySelectorAll('.formation-card');
            
            cards.forEach(card => {
                if (status === '' || card.dataset.status === status) {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });
        });

        document.getElementById('categoryFilter').addEventListener('change', function() {
            const category = this.value;
            const cards = document.querySelectorAll('.formation-card');
            
            cards.forEach(card => {
                if (category === '' || card.dataset.category === category) {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });
        });

        // Formation card interactions
        document.querySelectorAll('.formation-card').forEach(card => {
            card.addEventListener('click', function(e) {
                if (e.target.classList.contains('btn') || e.target.closest('.btn')) {
                    return;
                }
                
                const title = this.querySelector('.formation-title').textContent;
                const status = this.dataset.status;
                
                if (status === 'completed') {
                    alert(`📚 Formation: ${title}\n\n✅ Formation terminée\n🎓 Certificat disponible\n📊 Consulter les détails et statistiques`);
                } else if (status === 'in-progress') {
                    alert(`📚 Formation: ${title}\n\n📖 Formation en cours\n▶️ Reprendre où vous vous êtes arrêté\n📊 Voir la progression détaillée`);
                } else {
                    alert(`📚 Formation: ${title}\n\n🚀 Formation non commencée\n✨ Prêt à commencer votre apprentissage?\n📋 Consulter le programme détaillé`);
                }
            });
        });

        // Button interactions
        document.querySelectorAll('.btn').forEach(btn => {
            btn.addEventListener('click', function(e) {
                e.preventDefault();
                e.stopPropagation();
                
                const text = this.textContent.trim();
                const card = this.closest('.formation-card') || this.closest('.formation-list-item');
                const title = card.querySelector('.formation-title, h3').textContent;
                
                if (text.includes('Certificat')) {
                    alert(`🎓 Téléchargement du certificat\n\nFormation: ${title}\n\n✅ Certificat officiel ADSIAM\n📄 Format PDF téléchargeable\n🔗 Lien de vérification inclus\n📧 Envoi par email également`);
                } else if (text.includes('Continuer')) {
                    alert(`▶️ Reprise de la formation\n\nFormation: ${title}\n\n📖 Reprise au module en cours\n⏱️ Temps estimé restant affiché\n💾 Progression automatiquement sauvegardée`);
                } else if (text.includes('Commencer')) {
                    alert(`🚀 Début de la formation\n\nFormation: ${title}\n\n📚 Introduction et objectifs\n🎯 Premier module accessible\n⭐ Bonne formation avec ADSIAM!`);
                } else if (text.includes('Détails')) {
                    alert(`📊 Détails de la formation\n\nFormation: ${title}\n\n📈 Statistiques détaillées\n📝 Historique des modules\n💬 Messages du formateur\n📥 Ressources téléchargeables`);
                } else if (text.includes('Revoir')) {
                    alert(`📋 Révision de la formation\n\nFormation: ${title}\n\n🔄 Accès aux modules terminés\n📚 Ressources de révision\n🧠 Quiz de révision disponibles`);
                }
            });
        });

        // Animation on scroll
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.animation = 'fadeInUp 0.6s ease forwards';
                }
            });
        }, observerOptions);

        document.querySelectorAll('.fade-in').forEach(el => {
            observer.observe(el);
        });

        // Animate progress bars on load
        function animateProgressBars() {
            const progressBars = document.querySelectorAll('.progress-fill');
            progressBars.forEach((bar, index) => {
                setTimeout(() => {
                    bar.style.transform = 'scaleX(1)';
                }, index * 100);
            });
        }

        // Initialize
        window.addEventListener('load', () => {
            animateProgressBars();
            console.log('📚 Page Mes Formations ADSIAM chargée');
            console.log('🎯 6 formations affichées: 3 terminées, 2 en cours, 1 non commencée');
            console.log('⭐ Système de filtres et vues multiples opérationnel');
        });
    </script>
</body>
</html>