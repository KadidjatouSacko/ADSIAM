                }
            });
        });

        // Button interactions
        document.querySelectorAll('.btn').forEach(btn => {
            btn.addEventListener('click', function(e) {
                e.preventDefault();
                e.stopPropagation();
                
                const text = this.textContent.trim();
                const card = this.closest('.formation-card') || this.closest('.formation-list-item');
                const title = card.querySelector('.formation-title, h3').textContent;
                
                if (text.includes('Certificat')) {
                    alert(`ğŸ“ TÃ©lÃ©chargement du certificat\n\nFormation: ${title}\n\nâœ… Certificat officiel ADSIAM\nğŸ“„ Format PDF tÃ©lÃ©chargeable\nğŸ”— Lien de vÃ©rification inclus\nğŸ“§ Envoi par email Ã©galement`);
                } else if (text.includes('Continuer')) {
                    alert(`â–¶ï¸ Reprise de la formation\n\nFormation: ${title}\n\nğŸ“– Reprise au module en cours\nâ±ï¸ Temps estimÃ© restant affichÃ©\nğŸ’¾ Progression automatiquement sauvegardÃ©e`);
                } else if (text.includes('Commencer')) {
                    alert(`ğŸš€ DÃ©but de la formation\n\nFormation: ${title}\n\nğŸ“š Introduction et objectifs\nğŸ¯ Premier module accessible\nâ­ Bonne formation avec ADSIAM!`);
                } else if (text.includes('DÃ©tails')) {
                    alert(`ğŸ“Š DÃ©tails de la formation\n\nFormation: ${title}\n\nğŸ“ˆ Statistiques dÃ©taillÃ©es\nğŸ“ Historique des modules\nğŸ’¬ Messages du formateur\nğŸ“¥ Ressources tÃ©lÃ©chargeables`);
                } else if (text.includes('Revoir')) {
