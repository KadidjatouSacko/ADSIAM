<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mon Profil | ADSIAM √âtudiant</title>
    <link rel="stylesheet" href="/css/profil.css">
</head>
<body>
    <!-- Header -->
    <header>
        <div class="header-container">
            <h1>ADSIAM √âtudiant</h1>
            <nav>
                <a href="/">Accueil</a>
                <a href="/formations">Formations</a>
                <a href="/profil">Profil</a>
                <a href="/logout">D√©connexion</a>
            </nav>
        </div>
    </header>

    <!-- Main Container -->
    <div class="main-container">
        <!-- Sidebar -->
        <aside class="profile-sidebar fade-in">
            <div class="profile-header">
                <div class="profile-picture" onclick="changePhoto()">
                    <%= user.initiales %>
                    <div class="photo-upload">üì∑</div>
                </div>
                <h2 class="profile-name"><%= user.prenom %> <%= user.nom %></h2>
                <p class="profile-role"><%= user.statut %> ‚Ä¢ <%= user.ville %></p>
            </div>
            
            <ul class="profile-menu">
                <li><a href="#" class="menu-link active" data-section="general">
                    <span class="menu-icon">üë§</span>
                    Informations g√©n√©rales
                </a></li>
                <li><a href="#" class="menu-link" data-section="stats">
                    <span class="menu-icon">üìä</span>
                    Mes statistiques
                </a></li>
                <li><a href="#" class="menu-link" data-section="progress">
                    <span class="menu-icon">üìà</span>
                    Ma progression
                </a></li>
                <li><a href="#" class="menu-link" data-section="certifications">
                    <span class="menu-icon">üéì</span>
                    Mes certifications
                </a></li>
                <li><a href="#" class="menu-link" data-section="notifications">
                    <span class="menu-icon">üîî</span>
                    Notifications
                </a></li>
                <li><a href="#" class="menu-link" data-section="security">
                    <span class="menu-icon">üîí</span>
                    S√©curit√© & Compte
                </a></li>
                <li><a href="#" class="menu-link" data-section="preferences">
                    <span class="menu-icon">‚öôÔ∏è</span>
                    Pr√©f√©rences
                </a></li>
            </ul>
        </aside>

        <!-- Content -->
        <main class="profile-content fade-in">
            <!-- Success Message -->
            <% if (successMessage) { %>
            <div class="success-message" id="successMessage">
                <span>‚úÖ</span>
                <span><%= successMessage %></span>
            </div>
            <% } %>

            <!-- Section: Informations g√©n√©rales -->
            <section class="content-section active" id="general">
                <div class="section-header">
                    <h1 class="section-title">Informations g√©n√©rales</h1>
                    <p class="section-subtitle">G√©rez vos informations personnelles et professionnelles</p>
                </div>
                
                <form id="generalForm" method="POST" action="/profil/update">
                    <div class="form-grid">
                        <div>
                            <div class="form-group">
                                <label class="form-label">Pr√©nom *</label>
                                <input type="text" name="prenom" class="form-input" value="<%= user.prenom %>" required>
                            </div>
                            
                            <div class="form-group">
                                <label class="form-label">Nom *</label>
                                <input type="text" name="nom" class="form-input" value="<%= user.nom %>" required>
                            </div>
                            
                            <div class="form-group">
                                <label class="form-label">Email *</label>
                                <input type="email" name="email" class="form-input" value="<%= user.email %>" required>
                                <div class="form-help">Utilis√© pour la connexion et les communications importantes</div>
                            </div>
                            
                            <div class="form-group">
                                <label class="form-label">T√©l√©phone</label>
                                <input type="tel" name="telephone" class="form-input" value="<%= user.telephone %>">
                            </div>
                        </div>
                        
                        <div>
                            <div class="form-group">
                                <label class="form-label">Date de naissance</label>
                                <input type="date" name="date_naissance" class="form-input" value="<%= user.date_naissance %>">
                            </div>
                            
                            <div class="form-group">
                                <label class="form-label">Adresse</label>
                                <input type="text" name="adresse" class="form-input" value="<%= user.adresse %>">
                            </div>
                            
                            <div class="form-group">
                                <label class="form-label">Ville</label>
                                <input type="text" name="ville" class="form-input" value="<%= user.ville %>">
                            </div>
                            
                            <div class="form-group">
                                <label class="form-label">Code postal</label>
                                <input type="text" name="code_postal" class="form-input" value="<%= user.code_postal %>">
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label">Statut professionnel</label>
                        <select name="statut" class="form-select">
                            <% ["Aide √† domicile","Auxiliaire de vie","Aide-soignant EHPAD","Infirmier √† domicile","Autre"].forEach(function(option) { %>
                                <option value="<%= option %>" <%= user.statut === option ? "selected" : "" %>><%= option %></option>
                            <% }) %>
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label">Exp√©rience professionnelle</label>
                        <select name="experience" class="form-select">
                            <% ["Moins d'1 an","1-2 ans","3-5 ans","5-10 ans","Plus de 10 ans"].forEach(function(option) { %>
                                <option value="<%= option %>" <%= user.experience === option ? "selected" : "" %>><%= option %></option>
                            <% }) %>
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label">Pr√©sentation</label>
                        <textarea name="presentation" class="form-textarea" placeholder="Parlez-nous de votre parcours et de vos motivations..."><%= user.presentation %></textarea>
                    </div>
                    
                    <div class="form-actions">
                        <button type="reset" class="btn btn-secondary">‚Ü∂ Annuler</button>
                        <button type="submit" class="btn btn-primary">üíæ Sauvegarder</button>
                    </div>
                </form>
            </section>

            <!-- Section: Statistiques -->
            <section class="content-section" id="stats">
                <div class="section-header">
                    <h1 class="section-title">Mes statistiques</h1>
                    <p class="section-subtitle">Vue d'ensemble de votre parcours de formation ADSIAM</p>
                </div>
                
                <div class="stats-grid">
                    <% stats.forEach(function(stat) { %>
                        <div class="stat-card">
                            <span class="stat-number"><%= stat.value %></span>
                            <span class="stat-label"><%= stat.label %></span>
                        </div>
                    <% }) %>
                </div>
            </section>

            <!-- Section: Progression -->
            <section class="content-section" id="progress">
                <div class="section-header">
                    <h1 class="section-title">Ma progression</h1>
                    <p class="section-subtitle">Suivez votre avancement dans chaque formation</p>
                </div>
                
                <% progressions.forEach(function(progress) { %>
                    <div class="progress-item">
                        <div class="progress-info">
                            <div class="progress-title"><%= progress.titre %></div>
                            <div class="progress-meta"><%= progress.meta %></div>
                        </div>
                        <div class="progress-value">
                            <span class="progress-percentage"><%= progress.percentage %>%</span>
                            <div class="progress-bar">
                                <div class="progress-fill" style="width: <%= progress.percentage %>%"></div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </section>

            <!-- Section: Certifications, Notifications, S√©curit√©, Pr√©f√©rences, etc. √† compl√©ter -->
        </main>
    </div>

    <footer>
        <p>&copy; 2025 ADSIAM √âtudiant</p>
    </footer>
</body>
</html>
