        .security-info {
            flex: 1;
        }

        .security-title {
            font-weight: 500;
            color: var(--text-dark);
            margin-bottom: 0.5rem;
        }

        .security-description {
            font-size: 0.9rem;
            color: var(--text-light);
        }

        .security-status {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.85rem;
            font-weight: 500;
        }

        .status-success {
            color: var(--success);
        }

        .status-warning {
            color: var(--warning);
