        /* Notifications Settings */
        .notification-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem;
            border-bottom: 1px solid var(--soft-gray);
        }

        .notification-item:last-child {
            border-bottom: none;
        }

        .notification-info {
            flex: 1;
        }

        .notification-title {
            font-weight: 500;
            color: var(--text-dark);
            margin-bottom: 0.3rem;
        }

        .notification-description {
            font-size: 0.9rem;
            color: var(--text-light);
        }

        .toggle-switch {
            position: relative;
            width: 50px;
            height: 25px;
            background: var(--soft-gray);
            border-radius: 25px;
            cursor: pointer;
            transition: all 0.3s;
        }

        .toggle-switch.active {
            background: var(--primary-blue);
        }

        .toggle-slider {
            position: absolute;
            top: 2px;
            left: 2px;
            width: 21px;
            height: 21px;
            background: white;
            border-radius: 50%;
            transition: all 0.3s;
        }

        .toggle-switch.active .toggle-slider {
            transform: translateX(25px);
        }

        /* Security Section */
        .security-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1.5rem;
            background: var(--soft-gray);
            border-radius: 12px;
            margin-bottom: 1rem;
