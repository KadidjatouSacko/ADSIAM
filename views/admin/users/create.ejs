    // √âcouteurs d'√©v√©nements pour la mise √† jour en temps r√©el
    document.addEventListener('DOMContentLoaded', function() {
        const inputs = ['prenom', 'nom', 'email', 'role', 'type_utilisateur', 'etablissement', 'ville'];
