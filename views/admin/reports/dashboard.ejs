<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
    <div class="admin-layout">
        <nav class="sidebar">
            <div class="sidebar-header">
                <h2>ADSIAM Admin</h2>
            </div>
            <ul class="sidebar-menu">
                <li><a href="/admin">Tableau de bord</a></li>
                <li><a href="/admin/utilisateurs">Utilisateurs</a></li>
                <li><a href="/admin/formations">Formations</a></li>
                <li><a href="/admin/inscriptions">Inscriptions</a></li>
                <li><a href="/admin/evenements">Événements</a></li>
                <li><a href="/admin/facturation">Facturation</a></li>
                <li><a href="/admin/rapports" class="<%= currentPage === 'reports' ? 'active' : '' %>">Rapports</a></li>
                <li><a href="/admin/messagerie">Messagerie</a></li>
                <li><a href="/admin/parametres">Paramètres</a></li>
            </ul>
        </nav>

        <main class="main-content">
            <div class="content-header">
                <h1>Rapports et statistiques</h1>
                <div class="header-actions">
                    <button class="btn btn-primary" onclick="generateReport()">Générer rapport</button>
                    <button class="btn btn-secondary" onclick="exportAllData()">Exporter données</button>
                </div>
            </div>

            <!-- Statistiques générales -->
            <div class="dashboard-stats">
                <div class="stat-card">
                    <div class="stat-content">
                        <div class="stat-number"><%= reportData.userStats.total %></div>
                        <div class="stat-label">Total utilisateurs</div>
                        <div class="stat-detail">
                            <%= reportData.userStats.active %> actifs
                        </div>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-content">
                        <div class="stat-number"><%= reportData.formationStats.total %></div>
                        <div class="stat-label">Total formations</div>
                        <div class="stat-detail">
                            <%= reportData.formationStats.active %> actives
                        </div>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-content">
                        <div class="stat-number"><%= reportData.inscriptionStats.total %></div>
                        <div class="stat-label">Total inscriptions</div>
                        <div class="stat-detail">
                            <%= reportData.inscriptionStats.active %> actives
                        </div>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-content">
                        <div class="stat-number"><%= reportData.progressionStats.completionRate %>%</div>
                        <div class="stat-label">Taux de completion</div>
                        <div class="stat-detail">
                            <%= reportData.progressionStats.completed %> terminées
                        </div>
                    </div>
                </div>
            </div>

            <!-- Répartition par rôle -->
            <div class="reports-section">
                <div class="report-card">
                    <h3>Répartition des utilisateurs par rôle</h3>
                    <div class="chart-placeholder">
                        <table class="stats-table">
                            <thead>
                                <tr>
                                    <th>Rôle</th>
                                    <th>Nombre</th>
                                    <th>Pourcentage</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (reportData.userStats.byRole && reportData.userStats.byRole.length > 0) { %>
                                    <% reportData.userStats.byRole.forEach(role => { %>
                                    <tr>
                                        <td><%= role.role %></td>
                                        <td><%= role.count %></td>
                                        <td><%= Math.round((role.count / reportData.userStats.total) * 100) %>%</td>
                                    </tr>
                                    <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="3" style="text-align: center; color: var(--text-light);">
                                            Aucune donnée disponible
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="report-card">
                    <h3>Répartition des formations par domaine</h3>
                    <div class="chart-placeholder">
                        <table class="stats-table">
                            <thead>
                                <tr>
                                    <th>Domaine</th>
                                    <th>Nombre</th>
                                    <th>Pourcentage</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (reportData.formationStats.byDomain && reportData.formationStats.byDomain.length > 0) { %>
                                    <% reportData.formationStats.byDomain.forEach(domain => { %>
                                    <tr>
                                        <td><%= domain.domaine || 'Non défini' %></td>
                                        <td><%= domain.count %></td>
                                        <td><%= Math.round((domain.count / reportData.formationStats.total) * 100) %>%</td>
                                    </tr>
                                    <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="3" style="text-align: center; color: var(--text-light);">
                                            Aucune donnée disponible
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Analyses détaillées -->
            <div class="reports-section">
                <div class="report-card full-width">
                    <h3>Analyse des inscriptions</h3>
                    <div class="analysis-grid">
                        <div class="analysis-item">
                            <div class="analysis-label">Inscriptions totales</div>
                            <div class="analysis-value"><%= reportData.inscriptionStats.total %></div>
                        </div>
                        <div class="analysis-item">
                            <div class="analysis-label">Inscriptions actives</div>
                            <div class="analysis-value"><%= reportData.inscriptionStats.active %></div>
                        </div>
                        <div class="analysis-item">
                            <div class="analysis-label">En attente</div>
                            <div class="analysis-value warning"><%= reportData.inscriptionStats.pending %></div>
                        </div>
                        <div class="analysis-item">
                            <div class="analysis-label">Terminées</div>
                            <div class="analysis-value success"><%= reportData.inscriptionStats.completed %></div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Actions rapides -->
            <div class="reports-section">
                <div class="report-card">
                    <h3>Exports disponibles</h3>
                    <div class="export-actions">
                        <button class="btn btn-secondary" onclick="exportUsers()">
                            Exporter utilisateurs (CSV)
                        </button>
                        <button class="btn btn-secondary" onclick="exportFormations()">
                            Exporter formations (CSV)
                        </button>
                        <button class="btn btn-secondary" onclick="exportInscriptions()">
                            Exporter inscriptions (CSV)
                        </button>
                        <button class="btn btn-secondary" onclick="exportUsersPDF()">
                            Rapport utilisateurs (PDF)
                        </button>
                    </div>
                </div>

                <div class="report-card">
                    <h3>Période d'analyse</h3>
                    <form class="period-form">
                        <div class="form-row">
                            <div class="form-group">
                                <label>Date de début</label>
                                <input type="date" class="form-input" id="startDate">
                            </div>
                            <div class="form-group">
                                <label>Date de fin</label>
                                <input type="date" class="form-input" id="endDate">
                            </div>
                        </div>
                        <button type="button" class="btn btn-primary" onclick="updateAnalysis()">
                            Mettre à jour l'analyse
                        </button>
                    </form>
                </div>
            </div>
        </main>
    </div>

    <script>
        function generateReport() {
            alert('Génération du rapport en cours...\n\nLe rapport sera disponible dans quelques instants.');
        }

        function exportAllData() {
            if (confirm('Exporter toutes les données de la plateforme ?')) {
                window.location.href = '/admin/api/export/all?format=csv';
            }
        }

        function exportUsers() {
            window.location.href = '/admin/api/export/users?format=csv';
        }

        function exportFormations() {
            window.location.href = '/admin/api/export/formations?format=csv';
        }

        function exportInscriptions() {
            window.location.href = '/admin/api/export/inscriptions?format=csv';
        }

        function exportUsersPDF() {
            window.location.href = '/admin/api/export/users?format=pdf';
        }

        function updateAnalysis() {
            const startDate = document.getElementById('startDate').value;
            const endDate = document.getElementById('endDate').value;
            
            if (startDate && endDate) {
                window.location.href = `/admin/rapports?start=${startDate}&end=${endDate}`;
            } else {
                alert('Veuillez sélectionner une période complète');
            }
        }

        // Initialiser les dates par défaut
        document.addEventListener('DOMContentLoaded', function() {
            const endDate = new Date();
            const startDate = new Date();
            startDate.setMonth(startDate.getMonth() - 1);
            
            document.getElementById('endDate').value = endDate.toISOString().split('T')[0];
            document.getElementById('startDate').value = startDate.toISOString().split('T')[0];
        });
    </script>

    <style>
        .reports-section {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 2rem;
            margin-bottom: 3rem;
        }

        .report-card {
            background: white;
            border-radius: 20px;
            padding: 2rem;
            box-shadow: 0 10px 30px rgba(0,0,0,0.05);
        }

        .report-card.full-width {
            grid-column: 1 / -1;
        }

        .report-card h3 {
            margin-bottom: 1.5rem;
            font-size: 1.3rem;
            font-weight: 600;
            color: var(--text-dark);
        }

        .stats-table {
            width: 100%;
            border-collapse: collapse;
        }

        .stats-table th,
        .stats-table td {
            padding: 0.8rem;
            text-align: left;
            border-bottom: 1px solid var(--soft-gray);
        }

        .stats-table th {
            background: var(--light-blue);
            font-weight: 600;
            font-size: 0.9rem;
        }

        .analysis-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1.5rem;
        }

        .analysis-item {
            text-align: center;
            padding: 1.5rem;
            background: var(--soft-gray);
            border-radius: 15px;
        }

        .analysis-label {
            font-size: 0.9rem;
            color: var(--text-light);
            margin-bottom: 0.5rem;
        }

        .analysis-value {
            font-size: 2rem;
            font-weight: 700;
            color: var(--text-dark);
        }

        .analysis-value.warning {
            color: var(--warning);
        }

        .analysis-value.success {
            color: var(--success);
        }

        .export-actions {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .period-form {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
        }

        .chart-placeholder {
            min-height: 200px;
            display: flex;
            flex-direction: column;
        }

        @media (max-width: 1024px) {
            .reports-section {
                grid-template-columns: 1fr;
            }
            
            .analysis-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }

        @media (max-width: 768px) {
            .analysis-grid {
                grid-template-columns: 1fr;
            }
            
            .export-actions .btn {
                text-align: center;
            }
        }
    </style>
</body>
</html>