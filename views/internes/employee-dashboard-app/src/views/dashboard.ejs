<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tableau de Bord Employé</title>
    <link rel="stylesheet" href="/css/dashboard.css">
</head>
<body>
    <div class="dashboard-layout">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="logo">
                <div class="logo-icon">E+</div>
                <div class="logo-text">Dashboard Employé</div>
            </div>
            <nav class="nav-section">
                <div class="nav-section-title">Navigation</div>
                <div class="nav-links">
                    <a href="#" class="nav-link active">Tâches Assignées</a>
                    <a href="#" class="nav-link">Gestion des Étudiants</a>
                    <a href="#" class="nav-link">Gestion des Formations</a>
                    <a href="#" class="nav-link">Suivi des Évaluations</a>
                    <a href="#" class="nav-link">Messagerie Interne</a>
                </div>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <header class="header">
                <h1>Tableau de Bord</h1>
            </header>

            <section class="tasks-section">
                <h2>Tâches Assignées</h2>
                <div class="tasks-list">
                    <!-- Dynamically populated tasks will go here -->
                </div>
            </section>

            <section class="student-management">
                <h2>Gestion des Étudiants</h2>
                <div class="student-options">
                    <button onclick="openStudentModal()">Ajouter un Étudiant</button>
                    <button onclick="viewStudentList()">Voir la Liste des Étudiants</button>
                </div>
            </section>

            <section class="training-management">
                <h2>Gestion des Formations</h2>
                <div class="training-options">
                    <button onclick="openTrainingModal()">Ajouter une Formation</button>
                    <button onclick="viewTrainingList()">Voir la Liste des Formations</button>
                </div>
            </section>

            <section class="evaluation-tracking">
                <h2>Suivi des Évaluations</h2>
                <div class="evaluation-options">
                    <button onclick="viewEvaluationReports()">Voir les Rapports d'Évaluation</button>
                </div>
            </section>

            <section class="internal-messaging">
                <h2>Messagerie Interne</h2>
                <div class="messaging-options">
                    <button onclick="openMessagingModal()">Envoyer un Message</button>
                    <button onclick="viewMessages()">Voir les Messages</button>
                </div>
            </section>
        </main>
    </div>

    <!-- Include modals for reports and certificates -->
    <%- include('modals/report-modal.ejs') %>
    <%- include('modals/certificate-modal.ejs') %>

    <script src="/js/dashboard.js"></script>
</body>
</html>